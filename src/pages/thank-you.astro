    </section>

    <Footer />
</BaseLayout>

<!-- Google Ads Conversion Tracking -->
{import.meta.env.PUBLIC_GOOGLE_ADS_CONVERSION_ID && (
    <script type="text/partytown" is:inline>
        gtag('event', 'conversion', {
            'send_to': `${import.meta.env.PUBLIC_GOOGLE_ADS_CONVERSION_ID}/${import.meta.env.PUBLIC_GOOGLE_ADS_CONVERSION_LABEL}`,
            'transaction_id': ''
        });
    </script>
)}

<!-- Microsoft Ads (Bing) Conversion Tracking -->
{import.meta.env.PUBLIC_MICROSOFT_UET_TAG_ID && (
    <script type="text/partytown" is:inline>
        window.uetq = window.uetq || [];
        window.uetq.push('event', 'submit_lead_form', {
            'event_category': 'form_submission',
            'event_label': 'booking_form',
            'event_value': 0
        });
    </script>
)}

<!-- Google Analytics 4 Event -->
<script type="text/partytown" is:inline>
    gtag('event', 'generate_lead', {
        'event_category': 'engagement',
        'event_label': 'booking_form_submission',
        'value': 1
    });
</script>

