---

<script is:inline>
    // Client-side protection for the Thank You page
    const successCookieName = 'form_success_token';
    
    function getCookie(name) {
        const value = `; ${document.cookie}`;
        const parts = value.split(`; ${name}=`);
        if (parts.length === 2) {
            const popped = parts.pop();
            if (popped) return popped.split(';').shift();
        }
        return undefined;
    }

    function deleteCookie(name) {
        document.cookie = name + '=; Path=/; Expires=Thu, 01 Jan 1970 00:00:01 GMT;';
    }

    // Check for the success cookie
    const successToken = getCookie(successCookieName);

    if (!successToken) {
        // If no cookie, redirect to home
        window.location.href = '/';
    } else {
        // If cookie exists, delete it so it's a one-time ticket
        deleteCookie(successCookieName);
    }
</script>

