    window.ccConVal = 0;
    var script = document.createElement("script");
    script.async = true;
    script.type = "text/javascript";
    var target = 'https://www.clickcease.com/monitor/cccontrack.js';
    script.src = target; var elem = document.head; elem.appendChild(script);
</script>
