---
import BaseLayout from "@layouts/BaseLayout.astro";
import Header from "@components/layout/Header.astro";
import Footer from "@components/layout/Footer.astro";
import Button from "@components/ui/Button.astro";
import GoogleMap from "@components/ui/GoogleMap.astro";
import FAQSection from "@components/sections/FAQSection.astro";
import { siteConfig } from "@config/site.config";
import { generateBreadcrumbSchema } from "@utils/schema";

import Breadcrumbs from "@components/ui/Breadcrumbs.astro";
import { getFAQsByPage } from "@data/faqs";
import ContactForm from "@components/forms/ContactForm";
import { Icon } from "@components/ui/Icon";

const breadcrumbSchema = generateBreadcrumbSchema([
    { name: "Home", url: "https://ez2fixllc.com" },
    { name: "Contact", url: "https://ez2fixllc.com/contact" },
]);

const faqs = getFAQsByPage("contact");
---

<BaseLayout
    title="Contact Ez2Fix - Garage Door Repair Northern NJ | Call Now"
    description="Contact Ez2Fix for garage door service in Northern NJ. Call (201) 554-6769 for prompt help or use our contact form. 24/7 emergency service available."
    schema={[breadcrumbSchema]}
>
    <Header />
    <Breadcrumbs items={[{ name: "Contact" }]} />

    <!-- Hero Section -->
    <!-- Hero Section -->
    <section
        class="bg-gradient-to-br from-dark-700 to-dark-600 text-cream-100 py-16"
    >
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto text-center">
                <h1 class="text-4xl md:text-5xl font-bold mb-6 text-cream-100">
                    Get In Touch
                </h1>
                <p class="text-xl text-cream-200">
                    Have a question or need service? We're here to help 24/7
                </p>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="section bg-white">
        <div class="container mx-auto px-4">
            <div class="max-w-6xl mx-auto grid md:grid-cols-2 gap-12">
                <!-- Contact Info -->
                <div>
                    <h2 class="text-3xl font-bold text-dark-700 mb-6">
                        Contact Information
                    </h2>

                    <!-- Phone -->
                    <div class="mb-6">
                        <div class="flex items-center mb-2">
                            <Icon
                                name="phone"
                                className="w-6 h-6 text-gold-500 mr-3"
                            />
                            <h3 class="text-xl font-bold text-dark-700">
                                Phone
                            </h3>
                        </div>
                        <a
                            href={`tel:${siteConfig.contact.phoneRaw}`}
                            class="text-2xl font-bold text-gold-600 hover:text-gold-700"
                        >
                            {siteConfig.contact.phone}
                        </a>
                        <p class="text-dark-600 mt-1">
                            24/7 Emergency Service Available
                        </p>
                    </div>

                    <!-- Email -->
                    <div class="mb-6">
                        <div class="flex items-center mb-2">
                            <Icon
                                name="mail"
                                className="w-6 h-6 text-gold-500 mr-3"
                            />
                            <h3 class="text-xl font-bold text-dark-700">
                                Email
                            </h3>
                        </div>
                        <a
                            href={`mailto:${siteConfig.contact.email}`}
                            class="text-lg text-gold-600 hover:text-gold-700"
                        >
                            {siteConfig.contact.email}
                        </a>
                    </div>

                    <!-- Service Area -->
                    <div class="mb-6">
                        <div class="flex items-center mb-2">
                            <Icon
                                name="mapPin"
                                className="w-6 h-6 text-gold-500 mr-3"
                            />
                            <h3 class="text-xl font-bold text-dark-700">
                                Service Area
                            </h3>
                        </div>
                        <p class="text-dark-600">
                            Serving {siteConfig.coverage.primaryHub}
                        </p>
                        <p class="text-sm text-dark-500 mt-1">
                            {siteConfig.coverage.counties.join(", ")}
                        </p>
                    </div>

                    <!-- Hours -->
                    <div class="mb-8">
                        <div class="flex items-center mb-2">
                            <Icon
                                name="clock"
                                className="w-6 h-6 text-gold-500 mr-3"
                            />
                            <h3 class="text-xl font-bold text-dark-700">
                                Business Hours
                            </h3>
                        </div>
                        <div class="space-y-1 text-dark-600">
                            <p>{siteConfig.businessHours.weekdays}</p>
                            <p>{siteConfig.businessHours.weekends}</p>
                            <p class="font-semibold text-gold-600">
                                {siteConfig.businessHours.emergency}
                            </p>
                        </div>
                    </div>

                    <!-- License -->
                    <div class="bg-cream-100 p-4 rounded-lg">
                        <p class="text-sm text-dark-600">
                            <span class="font-semibold">Licensed & Insured</span
                            ><br />
                            NJ License {siteConfig.contact.license}
                        </p>
                    </div>
                </div>

                <!-- Contact Form -->
                <div class="bg-cream-50 p-8 rounded-xl">
                    <h2 class="text-2xl font-bold text-dark-700 mb-6">
                        Send Us a Message
                    </h2>
                    <p class="text-dark-600 mb-6">
                        Fill out the form below and we'll get back to you as
                        soon as possible. For emergencies, please call.
                    </p>

                    <ContactForm client:load />
                </div>
            </div>
        </div>
    </section>

    <!-- Service Area Map -->
    <section class="section bg-cream-100">
        <div class="container mx-auto px-4">
            <div class="max-w-6xl mx-auto">
                <div class="text-center mb-12">
                    <h2
                        class="text-3xl md:text-4xl font-bold text-dark-700 mb-4"
                    >
                        Serving Northern New Jersey
                    </h2>
                    <p class="text-lg text-dark-600">
                        See our full service coverage area
                    </p>
                </div>

                <div class="bg-white p-8 rounded-xl shadow-lg">
                    <GoogleMap />
                </div>

                <div class="mt-8 text-center">
                    <p class="text-dark-600 mb-4">
                        Proudly serving customers across {
                            siteConfig.coverage.counties.join(", ")
                        }
                    </p>
                    <Button variant="primary" href="/service-areas">
                        <Icon name="mapPin" className="w-5 h-5 mr-2" />
                        View All Service Areas
                    </Button>
                </div>
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <FAQSection
        faqs={faqs}
        title="Contact FAQs"
        subtitle="Common questions about getting in touch and scheduling service"
        className="bg-cream-100"
    />

    <Footer />
</BaseLayout>
