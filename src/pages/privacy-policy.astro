---
import BaseLayout from "@layouts/BaseLayout.astro";
import Header from "@components/layout/Header.astro";
import Footer from "@components/layout/Footer.astro";
import { siteConfig } from "@config/site.config";
import { generateBreadcrumbSchema } from "@utils/schema";
import Breadcrumbs from "@components/ui/Breadcrumbs.astro";

const breadcrumbSchema = generateBreadcrumbSchema([
    { name: "Home", url: "https://ez2fixllc.com" },
    { name: "Privacy Policy", url: "https://ez2fixllc.com/privacy-policy" },
]);

const lastUpdated = "November 23, 2024";
---

<BaseLayout
    title="Privacy Policy - Ez2Fix LLC"
    description="Privacy Policy for Ez2Fix LLC. Learn how we collect, use, and protect your personal information when you use our garage door services in Northern New Jersey."
    schema={[breadcrumbSchema]}
>
    <Header />
    <Breadcrumbs items={[{ name: "Privacy Policy" }]} />

    <!-- Content Section -->
    <section class="section bg-white">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                <h1 class="text-4xl md:text-5xl font-bold text-dark-700 mb-4">
                    Privacy Policy
                </h1>
                <p class="text-dark-600 mb-8">
                    Last Updated: {lastUpdated}
                </p>

                <div class="prose prose-lg max-w-none">
                    <!-- Introduction -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-dark-700 mb-4">
                            1. Introduction
                        </h2>
                        <p class="text-dark-600 mb-4">
                            {siteConfig.company.legalName} ("Ez2Fix," "we," "us,"
                            or "our") respects your privacy and is committed to protecting
                            your personal information. This Privacy Policy explains
                            how we collect, use, disclose, and safeguard your information
                            when you visit our website <a
                                href="https://ez2fixllc.com"
                                class="text-gold-600 hover:text-gold-700"
                                >ez2fix.com</a
                            > or use our services.
                        </p>
                        <p class="text-dark-600">
                            By using our website or services, you consent to the
                            data practices described in this policy. If you do
                            not agree with this Privacy Policy, please do not
                            use our website or services.
                        </p>
                    </div>

                    <!-- Information We Collect -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-dark-700 mb-4">
                            2. Information We Collect
                        </h2>

                        <h3 class="text-xl font-semibold text-dark-700 mb-3">
                            2.1 Personal Information
                        </h3>
                        <p class="text-dark-600 mb-4">
                            We collect personal information that you voluntarily
                            provide to us when you:
                        </p>
                        <ul class="list-disc pl-6 mb-4 text-dark-600 space-y-2">
                            <li>
                                Submit a service request through our booking
                                form
                            </li>
                            <li>Contact us via email or phone</li>
                            <li>
                                Sign up for our newsletter or promotional
                                communications
                            </li>
                            <li>Leave a review or testimonial</li>
                        </ul>
                        <p class="text-dark-600 mb-4">
                            This information may include:
                        </p>
                        <ul class="list-disc pl-6 mb-4 text-dark-600 space-y-2">
                            <li>Name</li>
                            <li>Email address</li>
                            <li>Phone number</li>
                            <li>Service address</li>
                            <li>City and ZIP code</li>
                            <li>Details about your service request</li>
                        </ul>

                        <h3 class="text-xl font-semibold text-dark-700 mb-3">
                            2.2 Automatically Collected Information
                        </h3>
                        <p class="text-dark-600 mb-4">
                            When you visit our website, we automatically collect
                            certain information about your device and browsing
                            activity, including:
                        </p>
                        <ul class="list-disc pl-6 mb-4 text-dark-600 space-y-2">
                            <li>IP address</li>
                            <li>Browser type and version</li>
                            <li>Device type and operating system</li>
                            <li>Pages visited and time spent on pages</li>
                            <li>Referring website or source</li>
                            <li>Geographic location (city/state level)</li>
                        </ul>

                        <h3 class="text-xl font-semibold text-dark-700 mb-3">
                            2.3 Cookies and Tracking Technologies
                        </h3>
                        <p class="text-dark-600 mb-4">
                            We use cookies, web beacons, and similar tracking
                            technologies to collect information about your
                            browsing behavior and preferences. You can control
                            cookies through your browser settings.
                        </p>
                    </div>

                    <!-- How We Use Your Information -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-dark-700 mb-4">
                            3. How We Use Your Information
                        </h2>
                        <p class="text-dark-600 mb-4">
                            We use the information we collect to:
                        </p>
                        <ul class="list-disc pl-6 mb-4 text-dark-600 space-y-2">
                            <li>Provide, operate, and maintain our services</li>
                            <li>Process and fulfill service requests</li>
                            <li>
                                Communicate with you about appointments,
                                services, and updates
                            </li>
                            <li>
                                Send marketing communications (with your
                                consent)
                            </li>
                            <li>Improve our website and services</li>
                            <li>Analyze website usage and trends</li>
                            <li>Prevent fraud and ensure security</li>
                            <li>Comply with legal obligations</li>
                        </ul>
                    </div>

                    <!-- Information Sharing -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-dark-700 mb-4">
                            4. Information Sharing and Disclosure
                        </h2>
                        <p class="text-dark-600 mb-4">
                            We do not sell, rent, or trade your personal
                            information. We may share your information only in
                            the following circumstances:
                        </p>

                        <h3 class="text-xl font-semibold text-dark-700 mb-3">
                            4.1 Service Providers
                        </h3>
                        <p class="text-dark-600 mb-4">
                            We may share your information with third-party
                            service providers who perform services on our
                            behalf, including:
                        </p>
                        <ul class="list-disc pl-6 mb-4 text-dark-600 space-y-2">
                            <li>Email delivery services (Resend)</li>
                            <li>Analytics providers (Google Analytics)</li>
                            <li>
                                Web hosting and infrastructure providers
                                (Vercel)
                            </li>
                            <li>Payment processors</li>
                        </ul>

                        <h3 class="text-xl font-semibold text-dark-700 mb-3">
                            4.2 Legal Requirements
                        </h3>
                        <p class="text-dark-600 mb-4">
                            We may disclose your information if required to do
                            so by law or in response to valid requests by public
                            authorities (e.g., court orders or government
                            agencies).
                        </p>

                        <h3 class="text-xl font-semibold text-dark-700 mb-3">
                            4.3 Business Transfers
                        </h3>
                        <p class="text-dark-600 mb-4">
                            If we are involved in a merger, acquisition, or sale
                            of assets, your information may be transferred as
                            part of that transaction. We will notify you via
                            email and/or prominent notice on our website of any
                            change in ownership.
                        </p>
                    </div>

                    <!-- Data Security -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-dark-700 mb-4">
                            5. Data Security
                        </h2>
                        <p class="text-dark-600 mb-4">
                            We implement appropriate technical and
                            organizational security measures to protect your
                            personal information against unauthorized access,
                            alteration, disclosure, or destruction. These
                            measures include:
                        </p>
                        <ul class="list-disc pl-6 mb-4 text-dark-600 space-y-2">
                            <li>SSL/TLS encryption for data transmission</li>
                            <li>
                                Secure data storage with reputable cloud
                                providers
                            </li>
                            <li>Regular security audits and updates</li>
                            <li>Access controls and authentication</li>
                            <li>Google reCAPTCHA v3 for spam prevention</li>
                        </ul>
                        <p class="text-dark-600">
                            However, no method of transmission over the Internet
                            or electronic storage is 100% secure. While we
                            strive to protect your information, we cannot
                            guarantee its absolute security.
                        </p>
                    </div>

                    <!-- Your Rights -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-dark-700 mb-4">
                            6. Your Privacy Rights
                        </h2>
                        <p class="text-dark-600 mb-4">
                            Depending on your location, you may have the
                            following rights regarding your personal
                            information:
                        </p>
                        <ul class="list-disc pl-6 mb-4 text-dark-600 space-y-2">
                            <li>
                                <strong>Access:</strong> Request access to the personal
                                information we hold about you
                            </li>
                            <li>
                                <strong>Correction:</strong> Request correction of
                                inaccurate or incomplete information
                            </li>
                            <li>
                                <strong>Deletion:</strong> Request deletion of your
                                personal information
                            </li>
                            <li>
                                <strong>Opt-Out:</strong> Opt out of marketing communications
                                at any time
                            </li>
                            <li>
                                <strong>Data Portability:</strong> Request a copy
                                of your data in a structured format
                            </li>
                        </ul>
                        <p class="text-dark-600 mb-4">
                            To exercise these rights, please contact us at <a
                                href={`mailto:${siteConfig.contact.email}`}
                                class="text-gold-600 hover:text-gold-700"
                                >{siteConfig.contact.email}</a
                            > or call <a
                                href={`tel:${siteConfig.contact.phoneRaw}`}
                                class="text-gold-600 hover:text-gold-700"
                                >{siteConfig.contact.phone}</a
                            >.
                        </p>
                    </div>

                    <!-- Third-Party Links -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-dark-700 mb-4">
                            7. Third-Party Links
                        </h2>
                        <p class="text-dark-600">
                            Our website may contain links to third-party
                            websites. We are not responsible for the privacy
                            practices or content of these external sites. We
                            encourage you to review the privacy policies of any
                            third-party sites you visit.
                        </p>
                    </div>

                    <!-- Children's Privacy -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-dark-700 mb-4">
                            8. Children's Privacy
                        </h2>
                        <p class="text-dark-600">
                            Our services are not directed to individuals under
                            the age of 18. We do not knowingly collect personal
                            information from children. If you are a parent or
                            guardian and believe your child has provided us with
                            personal information, please contact us immediately.
                        </p>
                    </div>

                    <!-- California Privacy Rights -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-dark-700 mb-4">
                            9. California Privacy Rights (CCPA)
                        </h2>
                        <p class="text-dark-600 mb-4">
                            If you are a California resident, you have
                            additional rights under the California Consumer
                            Privacy Act (CCPA):
                        </p>
                        <ul class="list-disc pl-6 mb-4 text-dark-600 space-y-2">
                            <li>
                                Right to know what personal information is
                                collected, used, shared, or sold
                            </li>
                            <li>Right to delete personal information</li>
                            <li>
                                Right to opt-out of the sale of personal
                                information (we do not sell personal
                                information)
                            </li>
                            <li>
                                Right to non-discrimination for exercising your
                                CCPA rights
                            </li>
                        </ul>
                    </div>

                    <!-- Changes to Privacy Policy -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-dark-700 mb-4">
                            10. Changes to This Privacy Policy
                        </h2>
                        <p class="text-dark-600">
                            We may update this Privacy Policy from time to time.
                            We will notify you of any changes by posting the new
                            Privacy Policy on this page and updating the "Last
                            Updated" date. We encourage you to review this
                            Privacy Policy periodically for any changes.
                        </p>
                    </div>

                    <!-- Contact Us -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-dark-700 mb-4">
                            11. Contact Us
                        </h2>
                        <p class="text-dark-600 mb-4">
                            If you have any questions about this Privacy Policy
                            or our data practices, please contact us:
                        </p>
                        <div class="bg-cream-100 p-6 rounded-lg">
                            <p class="font-semibold text-dark-700 mb-2">
                                {siteConfig.company.legalName}
                            </p>
                            <p class="text-dark-600">
                                Email: <a
                                    href={`mailto:${siteConfig.contact.email}`}
                                    class="text-gold-600 hover:text-gold-700"
                                    >{siteConfig.contact.email}</a
                                >
                            </p>
                            <p class="text-dark-600">
                                Phone: <a
                                    href={`tel:${siteConfig.contact.phoneRaw}`}
                                    class="text-gold-600 hover:text-gold-700"
                                    >{siteConfig.contact.phone}</a
                                >
                            </p>
                            <p class="text-dark-600">
                                Service Area: {siteConfig.coverage.primaryHub}
                            </p>
                            <p class="text-dark-600 text-sm mt-2">
                                License: {siteConfig.contact.license}
                            </p>
                        </div>
                    </div>

                    <!-- Consent -->
                    <div
                        class="bg-gold-50 border-l-4 border-gold-400 p-6 rounded"
                    >
                        <p class="text-dark-700 font-semibold mb-2">
                            Your Consent
                        </p>
                        <p class="text-dark-600">
                            By using our website, you consent to our Privacy
                            Policy and agree to its terms.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <Footer />
</BaseLayout>
