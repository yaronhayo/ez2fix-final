---


import BaseLayout from "@layouts/BaseLayout.astro";
import Header from "@components/layout/Header.astro";
import Button from "@components/ui/Button.astro";
import Footer from "@components/layout/Footer.astro";

const title = "Page Not Found | Ez2Fix Garage Door Repair";
const description =
    "The page you are looking for does not exist. Return to the homepage or contact us for garage door repair services.";
---

<BaseLayout title={title} description={description}>
    <Header />

    <main
        class="min-h-[60vh] flex items-center justify-center bg-dark-50 py-20 mt-24"
    >
        <div class="container mx-auto px-4 text-center">
            <div class="max-w-2xl mx-auto">
                <h1 class="text-6xl md:text-8xl font-bold text-gold-400 mb-6">
                    404
                </h1>
                <h2 class="text-3xl md:text-4xl font-bold text-dark-900 mb-6">
                    Page Not Found
                </h2>
                <p class="text-lg text-dark-600 mb-10 leading-relaxed">
                    Oops! The page you are looking for might have been removed,
                    had its name changed, or is temporarily unavailable.
                </p>

                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <Button variant="primary" href="/">
                        <svg class="w-5 h-5 mr-2" ><path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="m2.25 12l8.955-8.955a1.124 1.124 0 0 1 1.59 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25"/></svg>
                        Return Home
                    </Button>
                    <Button variant="outline" href="/contact">
                        <svg class="w-5 h-5 mr-2" ><path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75"/></svg>
                        Contact Support
                    </Button>
                </div>

                <div class="mt-12 pt-12 border-t border-dark-100">
                    <p class="text-dark-500 mb-4">Looking for our services?</p>
                    <div
                        class="flex flex-wrap justify-center gap-4 text-sm font-medium text-gold-600"
                    >
                        <a
                            href="/services/emergency-repair"
                            class="hover:text-gold-700 hover:underline"
                            >Emergency Repair</a
                        >
                        <span class="text-dark-300">•</span>
                        <a
                            href="/services/spring-repair"
                            class="hover:text-gold-700 hover:underline"
                            >Spring Repair</a
                        >
                        <span class="text-dark-300">•</span>
                        <a
                            href="/services/opener-installation"
                            class="hover:text-gold-700 hover:underline"
                            >Opener Installation</a
                        >
                        <span class="text-dark-300">•</span>
                        <a
                            href="/service-areas"
                            class="hover:text-gold-700 hover:underline"
                            >Service Areas</a
                        >
                    </div>
                </div>
            </div>
        </div>
    </main>

    <Footer />
</BaseLayout>
