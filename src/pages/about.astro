---
import BaseLayout from "@layouts/BaseLayout.astro";
import Header from "@components/layout/Header.astro";
import Footer from "@components/layout/Footer.astro";
import Button from "@components/ui/Button.astro";
import FAQSection from "@components/sections/FAQSection.astro";
import { siteConfig } from "@config/site.config";
import { generateBreadcrumbSchema } from "@utils/schema";
import { Icon } from "astro-icon/components";
import Breadcrumbs from "@components/ui/Breadcrumbs.astro";
import { getFAQsByPage } from "@data/faqs";

const breadcrumbSchema = generateBreadcrumbSchema([
    { name: "Home", url: "https://ez2fixllc.com" },
    { name: "About", url: "https://ez2fixllc.com/about" },
]);

const faqs = getFAQsByPage("about");
---

<BaseLayout
    title="About Ez2Fix - Professional Garage Door Service Since 2013"
    description="Family-owned garage door repair company serving Northern NJ since 2013. Licensed, insured, 10-year warranty. Meet our team and learn why 12,000+ customers trust Ez2Fix."
    schema={[breadcrumbSchema]}
>
    <Header />
    <Breadcrumbs items={[{ name: "About" }]} />

    <!-- Hero Section -->
    <section
        class="bg-gradient-to-br from-dark-700 to-dark-600 text-cream-100 py-16 md:py-20"
    >
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto text-center">
                <h1 class="text-4xl md:text-5xl font-bold mb-6 text-cream-100">
                    Northern New Jersey's Trusted Garage Door Experts
                </h1>
                <p class="text-xl text-cream-200">
                    Serving homeowners and businesses since 2013 with honest,
                    reliable garage door service
                </p>
            </div>
        </div>
    </section>

    <!-- Our Story -->
    <section class="section bg-white">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                <h2 class="text-3xl font-bold text-dark-700 mb-6">Our Story</h2>
                <div
                    class="prose prose-lg max-w-none text-dark-600 leading-relaxed space-y-4"
                >
                    <p>
                        {siteConfig.company.name} was founded in 2013 with a simple
                        mission: provide honest, reliable garage door service to
                        Northern New Jersey homeowners at fair prices. What started
                        as a one-person operation has grown into a trusted team serving
                        thousands of customers across Essex, Bergen, Hudson, Passaic,
                        and Morris counties.
                    </p>
                    <p>
                        We understand that a malfunctioning garage door isn't
                        just an inconvenience—it's a security risk and safety
                        hazard. That's why we built our business on prompt
                        response, quality workmanship, and transparent pricing.
                        Every technician on our team is licensed, insured, and
                        committed to treating your home with the same care we'd
                        give our own.
                    </p>
                    <p>
                        Today, with over {
                            siteConfig.trustSignals.customersServed
                        } satisfied customers and {
                            siteConfig.trustSignals.reviewCount
                        } five-star reviews, we're proud to be a highly-rated garage
                        door service. We've earned our reputation one repair, one
                        installation, and one satisfied customer at a time.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Our Credentials -->
    <section class="section bg-cream-100">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-dark-700 mb-12 text-center">
                Why Choose Ez2Fix?
            </h2>
            <div
                class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-6xl mx-auto"
            >
                <div class="bg-white p-6 rounded-lg shadow-sm text-center">
                    <div
                        class="w-16 h-16 bg-gold-100 rounded-full flex items-center justify-center mx-auto mb-4"
                    >
                        <Icon
                            name="heroicons:shield-check"
                            class="w-8 h-8 text-gold-600"
                        />
                    </div>
                    <h3 class="text-xl font-bold text-dark-700 mb-2">
                        Licensed & Insured
                    </h3>
                    <p class="text-dark-600">
                        NJ License {siteConfig.contact.license}
                    </p>
                    <p class="text-sm text-dark-500 mt-2">
                        Fully bonded and insured for your protection
                    </p>
                </div>

                <div class="bg-white p-6 rounded-lg shadow-sm text-center">
                    <div
                        class="w-16 h-16 bg-gold-100 rounded-full flex items-center justify-center mx-auto mb-4"
                    >
                        <Icon
                            name="heroicons:star-solid"
                            class="w-8 h-8 text-gold-600"
                        />
                    </div>
                    <h3 class="text-xl font-bold text-dark-700 mb-2">
                        {siteConfig.trustSignals.rating}★ Rating
                    </h3>
                    <p class="text-dark-600">
                        {siteConfig.trustSignals.reviewCount} Reviews
                    </p>
                    <p class="text-sm text-dark-500 mt-2">
                        Five-star service from real customers
                    </p>
                </div>

                <div class="bg-white p-6 rounded-lg shadow-sm text-center">
                    <div
                        class="w-16 h-16 bg-gold-100 rounded-full flex items-center justify-center mx-auto mb-4"
                    >
                        <Icon
                            name="heroicons:check-badge"
                            class="w-8 h-8 text-gold-600"
                        />
                    </div>
                    <h3 class="text-xl font-bold text-dark-700 mb-2">
                        {siteConfig.trustSignals.warranty}
                    </h3>
                    <p class="text-dark-600">On All Work</p>
                    <p class="text-sm text-dark-500 mt-2">
                        Comprehensive warranty coverage
                    </p>
                </div>

                <div class="bg-white p-6 rounded-lg shadow-sm text-center">
                    <div
                        class="w-16 h-16 bg-gold-100 rounded-full flex items-center justify-center mx-auto mb-4"
                    >
                        <Icon
                            name="heroicons:user-group"
                            class="w-8 h-8 text-gold-600"
                        />
                    </div>
                    <h3 class="text-xl font-bold text-dark-700 mb-2">
                        {siteConfig.trustSignals.customersServed}
                    </h3>
                    <p class="text-dark-600">Customers Served</p>
                    <p class="text-sm text-dark-500 mt-2">
                        Across Northern New Jersey
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Our Values -->
    <section class="section bg-white">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                <h2 class="text-3xl font-bold text-dark-700 mb-8 text-center">
                    Our Commitment to You
                </h2>
                <div class="space-y-6">
                    <div class="flex items-start">
                        <div
                            class="flex-shrink-0 w-12 h-12 bg-gold-100 rounded-full flex items-center justify-center mr-4"
                        >
                            <svg
                                class="w-6 h-6 text-gold-600"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-xl font-bold text-dark-700 mb-2">
                                Honest, Transparent Pricing
                            </h3>
                            <p class="text-dark-600">
                                We provide upfront estimates before starting
                                work. No hidden fees, no surprise charges.
                                You'll know exactly what you're paying and why.
                            </p>
                        </div>
                    </div>

                    <div class="flex items-start">
                        <div
                            class="flex-shrink-0 w-12 h-12 bg-gold-100 rounded-full flex items-center justify-center mr-4"
                        >
                            <svg
                                class="w-6 h-6 text-gold-600"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-xl font-bold text-dark-700 mb-2">
                                Quality Workmanship
                            </h3>
                            <p class="text-dark-600">
                                Every technician is trained, certified, and held
                                to our high standards. We use quality parts and
                                take pride in work that lasts.
                            </p>
                        </div>
                    </div>

                    <div class="flex items-start">
                        <div
                            class="flex-shrink-0 w-12 h-12 bg-gold-100 rounded-full flex items-center justify-center mr-4"
                        >
                            <svg
                                class="w-6 h-6 text-gold-600"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"></path>
                            </svg>
                        </div>
                        <div>
                            <h3 class="text-xl font-bold text-dark-700 mb-2">
                                Respectful Service
                            </h3>
                            <p class="text-dark-600">
                                We treat your home with care, clean up after
                                ourselves, and respect your time. Our
                                technicians are courteous, professional, and
                                friendly.
                            </p>
                        </div>
                    </div>

                    <div class="flex items-start">
                        <div
                            class="flex-shrink-0 w-12 h-12 bg-gold-100 rounded-full flex items-center justify-center mr-4"
                        >
                            <Icon
                                name="heroicons:check-badge"
                                class="w-6 h-6 text-gold-600"
                            />
                        </div>
                        <div>
                            <h3 class="text-xl font-bold text-dark-700 mb-2">
                                Stand Behind Our Work
                            </h3>
                            <p class="text-dark-600">
                                Our {siteConfig.trustSignals.warranty} warranty isn't
                                just a promise—it's our guarantee that we'll make
                                it right if anything goes wrong.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Service Area -->
    <section class="section bg-cream-100">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto text-center">
                <h2 class="text-3xl font-bold text-dark-700 mb-6">
                    Proudly Serving Northern New Jersey
                </h2>
                <p class="text-lg text-dark-600 mb-12">
                    Our technicians are stationed throughout the region to
                    provide prompt response times to the following counties:
                </p>

                <div class="grid md:grid-cols-3 gap-6 text-left">
                    <div
                        class="bg-white p-6 rounded-lg shadow-sm border-t-4 border-gold-400"
                    >
                        <h3 class="text-xl font-bold text-dark-700 mb-4">
                            Bergen County
                        </h3>
                        <ul class="space-y-2 text-dark-600">
                            <li>• Hackensack</li>
                            <li>• Fair Lawn</li>
                            <li>• Paramus</li>
                            <li>• Teaneck</li>
                            <li>• Ridgewood</li>
                        </ul>
                    </div>

                    <div
                        class="bg-white p-6 rounded-lg shadow-sm border-t-4 border-gold-400"
                    >
                        <h3 class="text-xl font-bold text-dark-700 mb-4">
                            Essex County
                        </h3>
                        <ul class="space-y-2 text-dark-600">
                            <li>• Newark</li>
                            <li>• East Orange</li>
                            <li>• Montclair</li>
                            <li>• West Caldwell</li>
                            <li>• Cedar Grove</li>
                        </ul>
                    </div>

                    <div
                        class="bg-white p-6 rounded-lg shadow-sm border-t-4 border-gold-400"
                    >
                        <h3 class="text-xl font-bold text-dark-700 mb-4">
                            Passaic & Hudson
                        </h3>
                        <ul class="space-y-2 text-dark-600">
                            <li>• Paterson</li>
                            <li>• Clifton</li>
                            <li>• Jersey City</li>
                            <li>• Hoboken</li>
                            <li>• Bayonne</li>
                        </ul>
                    </div>
                </div>

                <div class="mt-12">
                    <a
                        href="/service-areas"
                        class="text-gold-600 font-semibold hover:text-gold-700 inline-flex items-center"
                    >
                        View Full Service Area Map
                        <Icon
                            name="heroicons:arrow-right"
                            class="w-4 h-4 ml-2"
                        />
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <FAQSection
        faqs={faqs}
        title="Frequently Asked Questions"
        subtitle="Learn more about Ez2Fix and our commitment to quality service"
        className="bg-white"
    />

    <!-- CTA Section -->
    <section
        class="section bg-gradient-to-br from-dark-700 to-dark-600 text-white"
    >
        <div class="container mx-auto px-4 text-center">
            <h2 class="text-3xl md:text-4xl font-bold mb-6 text-cream-100">
                Ready to Experience the Ez2Fix Difference?
            </h2>
            <p class="text-xl text-cream-200 mb-8">
                Join {siteConfig.trustSignals.customersServed} satisfied Northern
                NJ homeowners
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <Button
                    variant="primary"
                    size="lg"
                    href="/booking?utm_source=website&utm_medium=cta&utm_campaign=about-page"
                >
                    <Icon name="heroicons:calendar" class="w-5 h-5 mr-2" />
                    Book Service Now
                </Button>
                <Button
                    variant="secondary"
                    size="lg"
                    href={`tel:${siteConfig.contact.phoneRaw}`}
                >
                    <Icon name="heroicons:phone" class="w-5 h-5 mr-2" />
                    Call {siteConfig.contact.phone}
                </Button>
            </div>
        </div>
    </section>

    <Footer />
</BaseLayout>
