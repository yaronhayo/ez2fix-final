---
import BaseLayout from "@layouts/BaseLayout.astro";
import Header from "@components/layout/Header.astro";
import Footer from "@components/layout/Footer.astro";
import ServicesGrid from "@components/sections/ServicesGrid.astro";
import FinalCTA from "@components/sections/FinalCTA.astro";
import ReviewsCarousel from "@components/sections/ReviewsCarousel.astro";
import SymptomChecker from "@components/sections/SymptomChecker.astro";
import { services } from "@data/services";
import { generateBreadcrumbSchema } from "@utils/schema";
import { Icon } from "astro-icon/components";
import Breadcrumbs from "@components/ui/Breadcrumbs.astro";
import FAQSection from "@components/sections/FAQSection.astro";
import { getFAQsByPage } from "@data/faqs";

const serviceFAQs = getFAQsByPage("services");

const metaTitle = "Garage Door Services Northern NJ | Repair & Installation";
const metaDescription =
    "Expert garage door services in Northern NJ. Emergency repair, spring replacement, opener installation, and new doors. Licensed & insured. Call (201) 554-6769.";

const breadcrumbSchema = generateBreadcrumbSchema([
    { name: "Home", url: "https://ez2fixllc.com" },
    { name: "Services", url: "https://ez2fixllc.com/services" },
]);
---

<BaseLayout
    title={metaTitle}
    description={metaDescription}
    schema={[breadcrumbSchema]}
>
    <Header />
    <Breadcrumbs items={[{ name: "Services" }]} />

    {/* Hero Section */}
    <section
        class="relative bg-dark-900 text-white py-20 lg:py-32 overflow-hidden"
    >
        <div class="absolute inset-0 z-0">
            <div
                class="absolute inset-0 bg-gradient-to-r from-dark-900 via-dark-900/90 to-dark-900/60 z-10"
            >
            </div>
            <img
                src="/images/hero/hero-1.jpg"
                alt="Garage door repair technician working"
                class="w-full h-full object-cover"
            />
        </div>

        <div class="container mx-auto px-4 relative z-10">
            <div class="max-w-3xl">
                <div
                    class="inline-flex items-center bg-gold-500/20 border border-gold-500/30 rounded-full px-4 py-1 mb-6 backdrop-blur-sm"
                >
                    <span
                        class="w-2 h-2 bg-gold-500 rounded-full mr-2 animate-pulse"
                    ></span>
                    <span
                        class="text-gold-400 font-medium text-sm tracking-wide uppercase"
                        >Available 24/7 for Emergencies</span
                    >
                </div>

                <h1
                    class="text-4xl md:text-6xl font-bold mb-6 leading-tight text-cream-100"
                >
                    Expert Solutions for Every <span class="text-gold-500"
                        >Garage Door Problem</span
                    >
                </h1>

                <p class="text-xl text-cream-200 mb-10 leading-relaxed">
                    From broken springs that trap your car to smart openers that
                    secure your home, we provide professional, licensed service
                    for all your garage door needs in Northern New Jersey.
                </p>

                <div class="flex flex-col sm:flex-row gap-4">
                    <a
                        href="/booking?utm_source=website&utm_medium=cta&utm_campaign=services-index"
                        class="inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-dark-900 bg-gold-500 rounded-lg hover:bg-gold-400 hover:text-white transition-all transform hover:scale-105 shadow-lg shadow-gold-500/20"
                    >
                        <Icon name="heroicons:calendar" class="w-5 h-5 mr-2" />
                        Book Service Online
                    </a>
                    <a
                        href="tel:2015546769"
                        class="inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-white border-2 border-white/20 bg-white/5 rounded-lg hover:bg-white hover:text-dark-900 transition-all backdrop-blur-sm"
                    >
                        <Icon name="heroicons:phone" class="w-5 h-5 mr-2" />
                        Call (201) 554-6769
                    </a>
                </div>

                <div
                    class="mt-12 flex items-center gap-8 text-sm font-medium text-gray-400"
                >
                    <div class="flex items-center">
                        <Icon
                            name="heroicons:check-circle"
                            class="w-5 h-5 text-gold-500 mr-2"
                        />
                        Licensed & Insured
                    </div>
                    <div class="flex items-center">
                        <Icon
                            name="heroicons:check-circle"
                            class="w-5 h-5 text-gold-500 mr-2"
                        />
                        Same-Day Service
                    </div>
                    <div class="flex items-center">
                        <Icon
                            name="heroicons:check-circle"
                            class="w-5 h-5 text-gold-500 mr-2"
                        />
                        5-Star Rated
                    </div>
                </div>
            </div>
        </div>
    </section>

    {/* Services Grid */}
    <ServicesGrid
        title="Our Professional Services"
        subtitle="Comprehensive repair, installation, and maintenance solutions."
        services={services}
        className="bg-white"
    />

    {/* Symptom Checker */}
    <SymptomChecker />

    {/* Trust Section */}
    <section class="py-20 bg-dark-900 text-white relative overflow-hidden">
        <div class="absolute inset-0 opacity-10 bg-dark-800"></div>
        <div class="container mx-auto px-4 relative z-10">
            <div class="grid md:grid-cols-2 gap-16 items-center">
                <div>
                    <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white">
                        Why Northern NJ Homeowners Trust Ez2Fix
                    </h2>
                    <p class="text-gray-400 text-lg mb-8 leading-relaxed">
                        We don't just fix garage doors; we provide peace of
                        mind. Our team of licensed technicians is dedicated to
                        safety, transparency, and quality workmanship. We never
                        use subcontractors, and we stand behind every job with
                        industry-leading warranties.
                    </p>

                    <div class="space-y-6">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <div
                                    class="flex items-center justify-center h-12 w-12 rounded-md bg-gold-500 text-dark-900"
                                >
                                    <Icon
                                        name="heroicons:shield-check"
                                        class="h-6 w-6"
                                    />
                                </div>
                            </div>
                            <div class="ml-4">
                                <h3 class="text-lg font-bold text-white">
                                    10-Year Warranty
                                </h3>
                                <p class="mt-1 text-gray-400">
                                    We use high-cycle parts and back our work
                                    with a decade-long guarantee.
                                </p>
                            </div>
                        </div>

                        <div class="flex">
                            <div class="flex-shrink-0">
                                <div
                                    class="flex items-center justify-center h-12 w-12 rounded-md bg-gold-500 text-dark-900"
                                >
                                    <Icon
                                        name="heroicons:clock"
                                        class="h-6 w-6"
                                    />
                                </div>
                            </div>
                            <div class="ml-4">
                                <h3 class="text-lg font-bold text-white">
                                    Same-Day Response
                                </h3>
                                <p class="mt-1 text-gray-400">
                                    Trucks fully stocked and ready to deploy
                                    24/7 for emergencies.
                                </p>
                            </div>
                        </div>

                        <div class="flex">
                            <div class="flex-shrink-0">
                                <div
                                    class="flex items-center justify-center h-12 w-12 rounded-md bg-gold-500 text-dark-900"
                                >
                                    <Icon
                                        name="heroicons:currency-dollar"
                                        class="h-6 w-6"
                                    />
                                </div>
                            </div>
                            <div class="ml-4">
                                <h3 class="text-lg font-bold text-white">
                                    Upfront Pricing
                                </h3>
                                <p class="mt-1 text-gray-400">
                                    No hidden fees. You approve the price before
                                    we start any work.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="relative">
                    <div
                        class="absolute -inset-4 bg-gold-500/20 rounded-2xl transform rotate-3 blur-lg"
                    >
                    </div>
                    <img
                        src="/images/services/commercial.jpg"
                        alt="Ez2Fix Service Truck"
                        class="relative rounded-2xl shadow-2xl border border-white/10"
                    />
                    <div
                        class="absolute -bottom-6 -left-6 bg-white p-6 rounded-xl shadow-xl hidden lg:block"
                    >
                        <div class="flex items-center space-x-2 mb-1">
                            <div class="text-gold-500 font-bold text-3xl">
                                5.0
                            </div>
                            <div class="flex text-gold-500">
                                <Icon
                                    name="heroicons:star-solid"
                                    class="w-5 h-5"
                                />
                                <Icon
                                    name="heroicons:star-solid"
                                    class="w-5 h-5"
                                />
                                <Icon
                                    name="heroicons:star-solid"
                                    class="w-5 h-5"
                                />
                                <Icon
                                    name="heroicons:star-solid"
                                    class="w-5 h-5"
                                />
                                <Icon
                                    name="heroicons:star-solid"
                                    class="w-5 h-5"
                                />
                            </div>
                        </div>
                        <div class="text-sm text-gray-500 font-medium">
                            Based on 500+ Local Reviews
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    {/* FAQs Section */}
    <FAQSection faqs={serviceFAQs} className="bg-cream-100" />

    {/* Reviews */}
    <ReviewsCarousel />

    {/* Final CTA */}
    <FinalCTA />

    <Footer />
</BaseLayout>
