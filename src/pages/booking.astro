---
import BaseLayout from "@layouts/BaseLayout.astro";
import LandingHeader from "@components/layout/LandingHeader.astro";
import Footer from "@components/layout/Footer.astro";
import BookingForm from "@components/BookingForm.tsx";
import FAQSection from "@components/sections/FAQSection.astro";
import { generateBreadcrumbSchema } from "@utils/schema";

import { getFAQsByPage } from "@data/faqs";

const breadcrumbSchema = generateBreadcrumbSchema([
    { name: "Home", url: "https://ez2fixllc.com" },
    { name: "Book Service", url: "https://ez2fixllc.com/booking" },
]);

const faqs = getFAQsByPage("booking");
---

<BaseLayout
    title="Book Garage Door Service Online | Free Estimate | Ez2Fix"
    description="Book garage door repair or installation online. Get a free estimate, choose your service, schedule at your convenience. Licensed, insured, 10-year warranty."
    schema={[breadcrumbSchema]}
    loadRecaptcha={true}
>
    <LandingHeader />

    <!-- Urgency Banner -->
    <div
        class="bg-dark-900 text-gold-400 border-b border-gold-900 text-center py-2 text-sm font-bold"
    >
        <div class="container mx-auto px-4 flex items-center justify-center">
            <svg class="w-4 h-4 mr-2"
                ><path
                    fill="none"
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0a9 9 0 0 1 18 0"
                ></path></svg
            >
            Limited Availability for Today! Book Now to Secure Your Spot.
        </div>
    </div>

    <!-- Hero / Booking Section -->
    <section
        class="bg-gradient-to-br from-dark-800 to-dark-900 min-h-screen relative overflow-hidden"
    >
        <!-- Background Pattern -->
        <div class="absolute inset-0 opacity-30"></div>

        <div class="container mx-auto px-4 py-12 relative z-10">
            <div class="grid lg:grid-cols-2 gap-12 items-start">
                <!-- Left Column: Value Proposition -->
                <div class="text-cream-100 space-y-8 pt-8 lg:sticky lg:top-24">
                    <h1
                        class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight text-white drop-shadow-lg"
                    >
                        Expert Garage Door <span class="text-gold-400"
                            >Repair & Installation</span
                        >
                    </h1>
                    <p
                        class="text-xl text-cream-100 leading-relaxed font-medium drop-shadow-md"
                    >
                        Don't let a broken garage door ruin your day. Our
                        licensed technicians are ready to help you now.
                    </p>

                    <div class="space-y-8">
                        <div class="flex items-start group">
                            <div
                                class="bg-gold-500/20 p-4 rounded-xl mr-5 backdrop-blur-sm border border-gold-500/10 group-hover:bg-gold-500/30 transition-colors"
                            >
                                <svg class="w-8 h-8 text-gold-400"
                                    ><path
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="1.5"
                                        d="m3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75L12 13.5z"
                                    ></path></svg
                                >
                            </div>
                            <div>
                                <h3 class="text-xl font-bold text-white mb-2">
                                    Same-Day Service
                                </h3>
                                <p class="text-cream-200 text-lg">
                                    We arrive fully stocked to fix your door in
                                    one visit.
                                </p>
                            </div>
                        </div>

                        <div class="flex items-start group">
                            <div
                                class="bg-gold-500/20 p-4 rounded-xl mr-5 backdrop-blur-sm border border-gold-500/10 group-hover:bg-gold-500/30 transition-colors"
                            >
                                <svg class="w-8 h-8 text-gold-400"
                                    ><path
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="1.5"
                                        d="M9 12.75L11.25 15L15 9.75m-3-7.036A11.96 11.96 0 0 1 3.598 6A12 12 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623c5.176-1.332 9-6.03 9-11.622c0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285"
                                    ></path></svg
                                >
                            </div>
                            <div>
                                <h3 class="text-xl font-bold text-white mb-2">
                                    10-Year Warranty
                                </h3>
                                <p class="text-cream-200 text-lg">
                                    Peace of mind with our industry-leading
                                    parts & labor warranty.
                                </p>
                            </div>
                        </div>

                        <div class="flex items-start group">
                            <div
                                class="bg-gold-500/20 p-4 rounded-xl mr-5 backdrop-blur-sm border border-gold-500/10 group-hover:bg-gold-500/30 transition-colors"
                            >
                                <svg class="w-8 h-8 text-gold-400"
                                    ><path
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="1.5"
                                        d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0s1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659c-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 1 1-18 0a9 9 0 0 1 18 0"
                                    ></path></svg
                                >
                            </div>
                            <div>
                                <h3 class="text-xl font-bold text-white mb-2">
                                    Free Estimates
                                </h3>
                                <p class="text-cream-200 text-lg">
                                    Transparent pricing with no hidden fees or
                                    surprises.
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Trust Badges -->
                    <div
                        class="pt-8 border-t border-white/10 flex flex-wrap gap-6 items-center"
                    >
                        <div
                            class="flex items-center text-sm font-bold text-white bg-white/5 px-4 py-2 rounded-full backdrop-blur-sm border border-white/10"
                        >
                            <svg class="w-5 h-5 text-gold-400 mr-2"
                                ><path
                                    fill="currentColor"
                                    fill-rule="evenodd"
                                    d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006l5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527l1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354L7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273l-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434z"
                                    clip-rule="evenodd"></path></svg
                            >
                            5.0/5 Rating
                        </div>
                        <div
                            class="flex items-center text-sm font-bold text-white bg-white/5 px-4 py-2 rounded-full backdrop-blur-sm border border-white/10"
                        >
                            <svg class="w-5 h-5 text-gold-400 mr-2"
                                ><path
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    d="M18 18.72a9.1 9.1 0 0 0 3.741-.479q.01-.12.01-.241a3 3 0 0 0-4.692-2.478m.94 3.197l.001.031q0 .337-.037.666A11.94 11.94 0 0 1 12 21c-2.17 0-4.207-.576-5.963-1.584A6 6 0 0 1 6 18.719m12 0a5.97 5.97 0 0 0-.941-3.197m0 0A6 6 0 0 0 12 12.75a6 6 0 0 0-5.058 2.772m0 0a3 3 0 0 0-4.681 2.72a9 9 0 0 0 3.74.477m.94-3.197a5.97 5.97 0 0 0-.94 3.197M15 6.75a3 3 0 1 1-6 0a3 3 0 0 1 6 0m6 3a2.25 2.25 0 1 1-4.5 0a2.25 2.25 0 0 1 4.5 0m-13.5 0a2.25 2.25 0 1 1-4.5 0a2.25 2.25 0 0 1 4.5 0"
                                ></path></svg
                            >
                            2,000+ Happy Customers
                        </div>
                        <div
                            class="flex items-center text-sm font-bold text-white bg-white/5 px-4 py-2 rounded-full backdrop-blur-sm border border-white/10"
                        >
                            <svg class="w-5 h-5 text-gold-400 mr-2"
                                ><path
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="1.5"
                                    d="M9 12.75L11.25 15L15 9.75M21 12c0 1.268-.63 2.39-1.593 3.068a3.75 3.75 0 0 1-1.043 3.296a3.75 3.75 0 0 1-3.296 1.043A3.75 3.75 0 0 1 12 21c-1.268 0-2.39-.63-3.068-1.593a3.75 3.75 0 0 1-3.296-1.043a3.75 3.75 0 0 1-1.043-3.296A3.75 3.75 0 0 1 3 12c0-1.268.63-2.39 1.593-3.068a3.75 3.75 0 0 1 1.043-3.296a3.75 3.75 0 0 1 3.296-1.043A3.75 3.75 0 0 1 12 3c1.268 0 2.39.63 3.068 1.593a3.75 3.75 0 0 1 3.296 1.043a3.75 3.75 0 0 1 1.043 3.296A3.75 3.75 0 0 1 21 12"
                                ></path></svg
                            >
                            Licensed & Insured
                        </div>
                    </div>
                </div>

                <!-- Right Column: Booking Form -->
                <div
                    class="bg-white rounded-2xl shadow-[0_20px_50px_rgba(0,0,0,0.5)] overflow-hidden border border-white/10"
                >
                    <div
                        class="bg-gradient-to-r from-gold-500 to-gold-600 p-5 text-center"
                    >
                        <h2 class="text-dark-900 font-bold text-xl">
                            Get Your Free Estimate
                        </h2>
                        <p class="text-dark-800 font-medium">
                            Fast response â€¢ No obligation
                        </p>
                    </div>
                    <div class="p-6 md:p-8">
                        <BookingForm client:load />
                    </div>
                    <div
                        class="bg-gray-50 p-4 text-center text-xs text-gray-500 border-t border-gray-100"
                    >
                        <svg class="w-3 h-3 inline-block mr-1"
                            ><path
                                fill="none"
                                stroke="currentColor"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="1.5"
                                d="M16.5 10.5V6.75a4.5 4.5 0 1 0-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 0 0 2.25-2.25v-6.75a2.25 2.25 0 0 0-2.25-2.25H6.75a2.25 2.25 0 0 0-2.25 2.25v6.75a2.25 2.25 0 0 0 2.25 2.25"
                            ></path></svg
                        >
                        Your information is secure and encrypted.
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <FAQSection
        faqs={faqs}
        title="Common Questions"
        subtitle="Everything you need to know about our booking process"
        className="bg-white"
    />

    <Footer />
</BaseLayout>
