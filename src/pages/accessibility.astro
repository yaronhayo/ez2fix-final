---
import BaseLayout from "@layouts/BaseLayout.astro";
import Header from "@components/layout/Header.astro";
import Footer from "@components/layout/Footer.astro";
import { siteConfig } from "@config/site.config";
import { generateBreadcrumbSchema } from "@utils/schema";
import Breadcrumbs from "@components/ui/Breadcrumbs.astro";

const breadcrumbSchema = generateBreadcrumbSchema([
    { name: "Home", url: "https://ez2fixllc.com" },
    {
        name: "Accessibility Statement",
        url: "https://ez2fixllc.com/accessibility",
    },
]);

const lastUpdated = "November 23, 2024";
---

<BaseLayout
    title="Accessibility Statement - Ez2Fix LLC"
    description="Ez2Fix is committed to ensuring digital accessibility for people with disabilities. Learn about our accessibility efforts and how to report issues."
    schema={[breadcrumbSchema]}
>
    <Header />
    <Breadcrumbs items={[{ name: "Accessibility" }]} />

    <!-- Content Section -->
    <section class="section bg-white">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                <h1 class="text-4xl md:text-5xl font-bold text-dark-700 mb-4">
                    Accessibility Statement
                </h1>
                <p class="text-dark-600 mb-8">
                    Last Updated: {lastUpdated}
                </p>

                <div class="prose prose-lg max-w-none">
                    <!-- Commitment -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-dark-700 mb-4">
                            Our Commitment to Accessibility
                        </h2>
                        <p class="text-dark-600 mb-4">
                            {siteConfig.company.legalName} is committed to ensuring
                            digital accessibility for people with disabilities. We
                            are continually improving the user experience for everyone
                            and applying the relevant accessibility standards to
                            ensure we provide equal access to all of our users.
                        </p>
                        <p class="text-dark-600">
                            We believe that everyone should have the ability to
                            access our services, regardless of their abilities
                            or the technology they use.
                        </p>
                    </div>

                    <!-- Standards -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-dark-700 mb-4">
                            Conformance Standards
                        </h2>
                        <p class="text-dark-600 mb-4">
                            Our website strives to conform to the <a
                                href="https://www.w3.org/WAI/WCAG21/quickref/"
                                target="_blank"
                                rel="noopener noreferrer"
                                class="text-gold-600 hover:text-gold-700"
                                >Web Content Accessibility Guidelines (WCAG) 2.1</a
                            > at Level AA. These guidelines explain how to make web
                            content more accessible for people with disabilities
                            and user-friendly for everyone.
                        </p>
                        <p class="text-dark-600">
                            WCAG 2.1 Level AA requires that our website be:
                        </p>
                        <ul class="list-disc pl-6 mb-4 text-dark-600 space-y-2">
                            <li>
                                <strong>Perceivable:</strong> Information and user
                                interface components must be presentable to users
                                in ways they can perceive
                            </li>
                            <li>
                                <strong>Operable:</strong> User interface components
                                and navigation must be operable
                            </li>
                            <li>
                                <strong>Understandable:</strong> Information and
                                the operation of the user interface must be understandable
                            </li>
                            <li>
                                <strong>Robust:</strong> Content must be robust enough
                                to be interpreted reliably by a wide variety of user
                                agents, including assistive technologies
                            </li>
                        </ul>
                    </div>

                    <!-- Measures -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-dark-700 mb-4">
                            Accessibility Measures
                        </h2>
                        <p class="text-dark-600 mb-4">
                            Ez2Fix has implemented the following measures to
                            ensure accessibility of our website:
                        </p>

                        <h3 class="text-xl font-semibold text-dark-700 mb-3">
                            Design & Development
                        </h3>
                        <ul class="list-disc pl-6 mb-4 text-dark-600 space-y-2">
                            <li>
                                Use of semantic HTML5 markup for proper
                                structure and meaning
                            </li>
                            <li>
                                Proper heading hierarchy (H1-H6) for screen
                                reader navigation
                            </li>
                            <li>
                                Descriptive text alternatives (alt text) for all
                                informative images
                            </li>
                            <li>
                                Sufficient color contrast ratios (minimum 4.5:1
                                for normal text, 3:1 for large text)
                            </li>
                            <li>
                                Clear focus indicators for keyboard navigation
                            </li>
                            <li>
                                Consistent and predictable navigation throughout
                                the site
                            </li>
                        </ul>

                        <h3 class="text-xl font-semibold text-dark-700 mb-3">
                            Forms & Interactions
                        </h3>
                        <ul class="list-disc pl-6 mb-4 text-dark-600 space-y-2">
                            <li>
                                Clearly labeled form fields with associated
                                labels
                            </li>
                            <li>
                                Clear error messages and validation feedback
                            </li>
                            <li>
                                Sufficient touch target sizes (minimum 44x44
                                pixels) for mobile users
                            </li>
                            <li>Keyboard-accessible interactive elements</li>
                            <li>
                                ARIA attributes for enhanced screen reader
                                support
                            </li>
                        </ul>

                        <h3 class="text-xl font-semibold text-dark-700 mb-3">
                            Content & Readability
                        </h3>
                        <ul class="list-disc pl-6 mb-4 text-dark-600 space-y-2">
                            <li>Minimum font size of 16px for body text</li>
                            <li>
                                Responsive design optimized for various screen
                                sizes (375px to 1920px)
                            </li>
                            <li>
                                Clean, readable typography with appropriate line
                                spacing
                            </li>
                            <li>Simple, plain language throughout the site</li>
                        </ul>
                    </div>

                    <!-- Assistive Technologies -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-dark-700 mb-4">
                            Compatible Assistive Technologies
                        </h2>
                        <p class="text-dark-600 mb-4">
                            Our website is designed to be compatible with the
                            following assistive technologies:
                        </p>
                        <ul class="list-disc pl-6 mb-4 text-dark-600 space-y-2">
                            <li>Screen readers (JAWS, NVDA, VoiceOver)</li>
                            <li>
                                Screen magnification software (ZoomText, MAGic)
                            </li>
                            <li>
                                Speech recognition software (Dragon
                                NaturallySpeaking)
                            </li>
                            <li>Keyboard-only navigation</li>
                            <li>High contrast mode</li>
                        </ul>
                    </div>

                    <!-- Known Limitations -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-dark-700 mb-4">
                            Known Limitations
                        </h2>
                        <p class="text-dark-600 mb-4">
                            Despite our diligent efforts, some limitations to
                            the accessibility of our website may exist. We are
                            actively working to address these:
                        </p>
                        <ul class="list-disc pl-6 mb-4 text-dark-600 space-y-2">
                            <li>
                                Third-party embedded content (e.g., Google Maps)
                                may not be fully accessible
                            </li>
                            <li>
                                Some older PDF documents may not be fully
                                accessible (we are working to remediate these)
                            </li>
                            <li>
                                Some animations may not fully respect the
                                prefers-reduced-motion setting
                            </li>
                        </ul>
                        <p class="text-dark-600">
                            If you encounter any accessibility barriers on our
                            website, please let us know so we can address them.
                        </p>
                    </div>

                    <!-- Assessment -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-dark-700 mb-4">
                            Assessment & Testing
                        </h2>
                        <p class="text-dark-600 mb-4">
                            We regularly assess the accessibility of our website
                            through:
                        </p>
                        <ul class="list-disc pl-6 mb-4 text-dark-600 space-y-2">
                            <li>Automated accessibility testing tools</li>
                            <li>
                                Manual testing with keyboard-only navigation
                            </li>
                            <li>Screen reader testing (NVDA, VoiceOver)</li>
                            <li>Color contrast validation</li>
                            <li>Mobile device testing</li>
                            <li>Google Lighthouse accessibility audits</li>
                        </ul>
                    </div>

                    <!-- Feedback -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-dark-700 mb-4">
                            Feedback & Contact
                        </h2>
                        <p class="text-dark-600 mb-4">
                            We welcome your feedback on the accessibility of our
                            website. If you encounter any accessibility barriers
                            or have suggestions for improvement, please contact
                            us:
                        </p>

                        <div class="bg-cream-100 p-6 rounded-lg mb-6">
                            <p class="font-semibold text-dark-700 mb-3">
                                Report an Accessibility Issue
                            </p>
                            <p class="text-dark-600 mb-2">
                                Email: <a
                                    href={`mailto:${siteConfig.contact.email}`}
                                    class="text-gold-600 hover:text-gold-700"
                                    >{siteConfig.contact.email}</a
                                >
                            </p>
                            <p class="text-dark-600 mb-2">
                                Phone: <a
                                    href={`tel:${siteConfig.contact.phoneRaw}`}
                                    class="text-gold-600 hover:text-gold-700"
                                    >{siteConfig.contact.phone}</a
                                >
                            </p>
                            <p class="text-dark-600 text-sm mt-3">
                                When reporting an accessibility issue, please
                                include:
                            </p>
                            <ul
                                class="list-disc pl-6 mt-2 text-dark-600 text-sm space-y-1"
                            >
                                <li>
                                    URL of the page where you encountered the
                                    issue
                                </li>
                                <li>
                                    Description of the issue and how it affects
                                    you
                                </li>
                                <li>
                                    Browser and assistive technology you are
                                    using
                                </li>
                            </ul>
                        </div>

                        <p class="text-dark-600">
                            We aim to respond to accessibility feedback within 2
                            business days and strive to resolve reported issues
                            within 10 business days.
                        </p>
                    </div>

                    <!-- Alternative Access -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-dark-700 mb-4">
                            Alternative Methods to Access Our Services
                        </h2>
                        <p class="text-dark-600 mb-4">
                            If you have difficulty using our website, we offer
                            alternative methods to access our services:
                        </p>
                        <ul class="list-disc pl-6 mb-4 text-dark-600 space-y-2">
                            <li>
                                <strong>Phone:</strong> Call us at <a
                                    href={`tel:${siteConfig.contact.phoneRaw}`}
                                    class="text-gold-600 hover:text-gold-700"
                                    >{siteConfig.contact.phone}</a
                                > to book service or get information
                            </li>
                            <li>
                                <strong>Email:</strong> Email us at <a
                                    href={`mailto:${siteConfig.contact.email}`}
                                    class="text-gold-600 hover:text-gold-700"
                                    >{siteConfig.contact.email}</a
                                > for assistance
                            </li>
                            <li>
                                <strong>In-Person:</strong> We can provide service
                                estimates and consultations at your location
                            </li>
                        </ul>
                        <p class="text-dark-600">
                            Our team is available 24/7 for emergency service
                            requests and ready to assist you in any way
                            possible.
                        </p>
                    </div>

                    <!-- Technical Specifications -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-dark-700 mb-4">
                            Technical Specifications
                        </h2>
                        <p class="text-dark-600 mb-4">
                            The accessibility of our website relies on the
                            following technologies:
                        </p>
                        <ul class="list-disc pl-6 mb-4 text-dark-600 space-y-2">
                            <li>HTML5</li>
                            <li>CSS3</li>
                            <li>JavaScript (with graceful degradation)</li>
                            <li>
                                ARIA (Accessible Rich Internet Applications)
                                attributes
                            </li>
                        </ul>
                        <p class="text-dark-600">
                            Our website is optimized for modern browsers
                            including Chrome, Firefox, Safari, and Edge.
                        </p>
                    </div>

                    <!-- Continuous Improvement -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-dark-700 mb-4">
                            Ongoing Commitment
                        </h2>
                        <p class="text-dark-600 mb-4">
                            Accessibility is an ongoing effort. We are committed
                            to:
                        </p>
                        <ul class="list-disc pl-6 mb-4 text-dark-600 space-y-2">
                            <li>
                                Regularly auditing our website for accessibility
                                issues
                            </li>
                            <li>
                                Incorporating accessibility into our design and
                                development process
                            </li>
                            <li>
                                Training our team on accessibility standards and
                                practices
                            </li>
                            <li>
                                Staying current with evolving accessibility
                                standards and guidelines
                            </li>
                            <li>
                                Listening to user feedback and making continuous
                                improvements
                            </li>
                        </ul>
                    </div>

                    <!-- Legal -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-dark-700 mb-4">
                            Legal & Compliance
                        </h2>
                        <p class="text-dark-600 mb-4">
                            This accessibility statement applies to the Ez2Fix
                            website at <a
                                href="https://ez2fixllc.com"
                                class="text-gold-600 hover:text-gold-700"
                                >ez2fix.com</a
                            >.
                        </p>
                        <p class="text-dark-600">
                            This statement was created on November 23, 2024, and
                            was last reviewed on {lastUpdated}.
                        </p>
                    </div>

                    <!-- Third-Party Content -->
                    <div class="mb-8">
                        <h2 class="text-2xl font-bold text-dark-700 mb-4">
                            Third-Party Content
                        </h2>
                        <p class="text-dark-600">
                            Some content on our website may be provided by third
                            parties (e.g., Google Maps, social media widgets).
                            While we strive to ensure all content is accessible,
                            we do not control the accessibility of third-party
                            content. If you encounter issues with third-party
                            content, please contact us and we will work to find
                            an alternative solution.
                        </p>
                    </div>

                    <!-- Thank You -->
                    <div
                        class="bg-gold-50 border-l-4 border-gold-400 p-6 rounded"
                    >
                        <p class="text-dark-700 font-semibold mb-2">
                            Thank You
                        </p>
                        <p class="text-dark-600">
                            We value all of our customers and are committed to
                            providing excellent service to everyone. Thank you
                            for choosing Ez2Fix for your garage door needs.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <Footer />
</BaseLayout>
