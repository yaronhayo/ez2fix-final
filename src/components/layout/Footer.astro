---
import { siteConfig } from "@config/site.config";
import { Image } from "astro:assets";
import logoImage from "@assets/images/logos/ez2fix-logo.png";
import { Icon } from "@components/ui/Icon";

const mainLinks = [
    { name: "Services", href: "/services" },
    { name: "Service Areas", href: "/service-areas" },
    { name: "About", href: "/about" },
    { name: "Reviews", href: "/reviews" },
    { name: "Blog", href: "/blog" },
];

const secondaryLinks = [
    { name: "FAQ", href: "/faq" },
    {
        name: "Book Online",
        href: "/booking?utm_source=website&utm_medium=cta&utm_campaign=footer",
    },
    {
        name: "Contact Us",
        href: "/contact?utm_source=website&utm_medium=cta&utm_campaign=footer",
    },
];

const legalLinks = [
    { name: "Privacy Policy", href: "/privacy-policy" },
    { name: "Terms of Service", href: "/terms-of-service" },
    { name: "Accessibility", href: "/accessibility" },
];
---

<footer class="bg-dark-700 text-cream-100">
    <div class="container mx-auto px-4 sm:px-6 pt-16 pb-8">
        <!-- Main Footer Content -->
        <div
            class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 xl:grid-cols-5 gap-8 mb-12 text-center sm:text-left"
        >
            <!-- Column 1: Company Info -->
            <div class="sm:col-span-2 xl:col-span-2">
                <a href="/" class="inline-block mb-4">
                    <Image
                        src={logoImage}
                        alt="Ez2Fix LLC Logo"
                        class="h-14 w-auto"
                    />
                </a>
                <p class="text-cream-200 mb-4 max-w-sm mx-auto sm:mx-0">
                    {siteConfig.company.tagline}
                </p>
                <div class="text-sm">
                    <span class="text-gold-300 font-semibold"
                        >Licensed, Bonded & Insured</span
                    >
                    <p class="text-cream-200">
                        NJ License: {siteConfig.contact.license}
                    </p>
                </div>

                <!-- Social Media Links -->
                <div class="flex justify-center sm:justify-start gap-4 mt-6">
                    <a
                        href={siteConfig.social.googleBusiness}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="w-10 h-10 rounded-full bg-dark-600 hover:bg-gold-500 flex items-center justify-center transition-all group"
                        aria-label="Visit our Google Business Profile"
                    >
                        <Icon
                            name="mapPin"
                            className="w-5 h-5 text-cream-100 group-hover:text-dark-900 transition-colors"
                        />
                    </a>
                    <a
                        href={siteConfig.social.instagram}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="w-10 h-10 rounded-full bg-dark-600 hover:bg-gold-500 flex items-center justify-center transition-all group"
                        aria-label="Follow us on Instagram"
                    >
                        <Icon
                            name="instagram"
                            className="w-5 h-5 text-cream-100 group-hover:text-dark-900 transition-colors"
                        />
                    </a>
                    <a
                        href={siteConfig.social.youtube}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="w-10 h-10 rounded-full bg-dark-600 hover:bg-gold-500 flex items-center justify-center transition-all group"
                        aria-label="Subscribe to our YouTube channel"
                    >
                        <Icon
                            name="youtube"
                            className="w-5 h-5 text-cream-100 group-hover:text-dark-900 transition-colors"
                        />
                    </a>
                </div>
            </div>

            <!-- Column 2: Site Links -->
            <div>
                <h3
                    class="text-lg font-semibold text-gold-300 mb-4 flex items-center justify-center sm:justify-start"
                >
                    <Icon name="map" className="w-5 h-5 mr-2" />
                    Explore
                </h3>
                <ul class="space-y-2">
                    {
                        mainLinks.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    class="text-cream-100 hover:text-gold-200 hover:underline transition-colors"
                                >
                                    {link.name}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Column 3: Get Help -->
            <div>
                <h3
                    class="text-lg font-semibold text-gold-300 mb-4 flex items-center justify-center sm:justify-start"
                >
                    <Icon name="helpCircle" className="w-5 h-5 mr-2" />
                    Get Help
                </h3>
                <ul class="space-y-2">
                    {
                        secondaryLinks.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    class="text-cream-100 hover:text-gold-200 hover:underline transition-colors"
                                >
                                    {link.name}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Column 4: Contact Us -->
            <div class="text-sm">
                <h3
                    class="text-lg font-semibold text-gold-300 mb-4 flex items-center justify-center sm:justify-start"
                >
                    <Icon name="phone" className="w-5 h-5 mr-2" />
                    Contact Us
                </h3>
                <div class="space-y-3">
                    <a
                        href={`tel:${siteConfig.contact.phoneRaw}`}
                        class="flex items-center justify-center sm:justify-start text-cream-100 hover:text-gold-200 transition-colors"
                    >
                        <Icon
                            name="phone"
                            className="w-5 h-5 mr-2 text-gold-400"
                        />
                        {siteConfig.contact.phone}
                    </a>
                    <a
                        href={`mailto:${siteConfig.contact.email}`}
                        class="flex items-center justify-center sm:justify-start text-cream-100 hover:text-gold-200 transition-colors"
                    >
                        <Icon
                            name="mail"
                            className="w-5 h-5 mr-2 text-gold-400"
                        />
                        {siteConfig.contact.email}
                    </a>
                    <p
                        class="flex items-center justify-center sm:justify-start"
                    >
                        <Icon
                            name="mapPin"
                            className="w-5 h-5 mr-2 text-gold-400"
                        />
                        Serving {siteConfig.coverage.primaryHub}
                    </p>
                </div>
                <p class="text-gold-300 font-semibold mt-4">
                    24/7 Emergency Service
                </p>
            </div>
        </div>

        <!-- Trust Badges -->
        <div class="border-y border-dark-600 py-6 mb-8">
            <div
                class="grid grid-cols-2 md:grid-cols-4 gap-6 text-sm text-center"
            >
                <div class="flex items-center justify-center">
                    <Icon
                        name="shield"
                        className="w-5 h-5 mr-2 text-gold-400"
                    />
                    <span>Licensed & Insured</span>
                </div>
                <div class="flex items-center justify-center">
                    <Icon name="star" className="w-5 h-5 mr-2 text-gold-400" />
                    <span>{siteConfig.trustSignals.rating}★ Google Rating</span>
                </div>
                <div class="flex items-center justify-center">
                    <Icon
                        name="checkCircle"
                        className="w-5 h-5 mr-2 text-gold-400"
                    />
                    <span>{siteConfig.trustSignals.warranty}</span>
                </div>
                <div class="flex items-center justify-center">
                    <Icon name="users" className="w-5 h-5 mr-2 text-gold-400" />
                    <span
                        >{siteConfig.trustSignals.customersServed}+ Customers</span
                    >
                </div>
            </div>
        </div>

        <!-- Bottom Bar -->
        <div class="text-center text-sm space-y-4">
            <p class="text-cream-200">
                Made with <Icon
                    name="heart"
                    className="w-5 h-5 text-gold-400 inline-block animate-heartbeat fill-current"
                />
                by <a
                    href={siteConfig.attribution.url}
                    class="font-semibold text-gold-300 hover:text-gold-200"
                    target="_blank"
                    rel="noopener noreferrer">Gett Marketing</a
                >
            </p>

            <div
                class="flex justify-center items-center gap-x-4 gap-y-2 flex-wrap"
            >
                {
                    legalLinks.map((link) => (
                        <a
                            href={link.href}
                            class="text-cream-100 hover:text-gold-200 hover:underline transition-colors"
                        >
                            {link.name}
                        </a>
                    ))
                }
            </div>

            <p class="text-cream-200">
                © {new Date().getFullYear()} Ez2Fix LLC. All rights reserved.
            </p>

            <p class="text-xs text-cream-300 pt-2">
                This site is protected by reCAPTCHA and the Google
                <a
                    href="https://policies.google.com/privacy"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="hover:text-gold-300 underline">Privacy Policy</a
                > and
                <a
                    href="https://policies.google.com/terms"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="hover:text-gold-300 underline">Terms of Service</a
                > apply.
            </p>
        </div>
    </div>
</footer>

<style>
    @keyframes heartbeat {
        0%,
        100% {
            transform: scale(1);
        }
        10%,
        30% {
            transform: scale(1.2);
        }
        20%,
        40% {
            transform: scale(1.1);
        }
    }
    .animate-heartbeat {
        animation: heartbeat 1.5s ease-in-out infinite;
    }
</style>
