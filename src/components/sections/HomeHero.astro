---
import Button from "@components/ui/Button.astro";
import { siteConfig } from "@config/site.config";
import BookingForm from "@components/BookingForm";
import { Icon } from "@components/ui/Icon";
---

<section class="relative min-h-[600px] flex items-center overflow-hidden mt-24">
    <!-- Background Video Only -->
    <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-dark-900/80 z-10"></div>

        <!-- Video Background (All Screen Sizes) -->
        <video
            width="1920"
            height="1080"
            class="w-full h-full object-cover"
            autoplay
            muted
            loop
            playsinline
            preload="auto"
            aria-hidden="true"
        >
            <source src="/videos/hero-background.mp4" type="video/mp4" />
        </video>
    </div>

    <div class="container mx-auto px-4 relative z-20 py-20">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
            <!-- Text Content -->
            <div class="text-cream-100 space-y-8">
                <h1
                    class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight text-cream-100"
                >
                    Garage Door Stuck? <br />
                    <span class="text-gold-400">We Fix It Today.</span>
                </h1>

                <p class="text-xl text-cream-100 max-w-xl leading-relaxed">
                    Broken springs, openers, or off-track doors? We provide 24/7
                    emergency repair in {siteConfig.coverage.primaryHub}.
                    Licensed, insured, and 5-star rated.
                </p>

                <div class="flex flex-col sm:flex-row gap-4 pt-2">
                    <Button
                        variant="primary"
                        size="lg"
                        href="/booking?utm_source=website&utm_medium=cta&utm_campaign=hero"
                        class="w-full sm:w-auto justify-center"
                    >
                        <Icon name="clipboard" className="w-5 h-5 mr-2" />
                        Book Free Estimate
                    </Button>
                    <div class="w-full sm:w-auto">
                        <Button
                            variant="outline"
                            size="lg"
                            href={`tel:${siteConfig.contact.phoneRaw}`}
                            class="w-full justify-center lg:hidden"
                        >
                            <Icon name="phone" className="w-5 h-5 mr-2" />
                            Call Now
                        </Button>
                        <Button
                            variant="outline"
                            size="lg"
                            href="/services?utm_source=website&utm_medium=cta&utm_campaign=home-hero"
                            class="w-full justify-center hidden lg:inline-flex"
                        >
                            <Icon name="wrench" className="w-5 h-5 mr-2" />
                            View All Services
                        </Button>
                    </div>
                </div>

                <!-- Trust Signals -->
                <div
                    class="flex items-center gap-6 pt-4 text-sm font-medium text-cream-200"
                >
                    <div class="flex items-center">
                        <Icon
                            name="shieldCheck"
                            className="w-5 h-5 text-gold-400 mr-2"
                        />
                        Licensed & Insured
                    </div>
                    <div class="flex items-center">
                        <Icon
                            name="star"
                            className="w-5 h-5 text-gold-400 mr-2"
                        />
                        5.0★ Google Rating
                    </div>
                </div>
            </div>

            <!-- Booking Form (Desktop Only) -->
            <div
                class="hidden lg:block bg-white/10 backdrop-blur-md p-6 rounded-2xl border border-gold-200/20 shadow-2xl"
            >
                <div class="text-center mb-4">
                    <h2 class="text-xl font-bold text-cream-100 mb-1">
                        Request Service
                    </h2>
                    <p class="text-cream-200 text-xs">
                        Prompt response • Free estimates • No hidden fees
                    </p>
                </div>

                <!-- Booking Form Component -->
                <div class="text-left">
                    <BookingForm client:visible />
                </div>
            </div>
        </div>
    </div>
</section>
