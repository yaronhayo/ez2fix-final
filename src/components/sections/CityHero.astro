---
interface Props {
    city: string;
    county: string;
    image: string;
}

const { city, county, image } = Astro.props;
---

<section class="relative bg-dark-900 text-white py-20 lg:py-32 overflow-hidden">
    <div class="absolute inset-0 z-0 opacity-50">
        <img
            src={image}
            alt={`Garage Door Repair in ${city}, NJ`}
            class="w-full h-full object-cover"
        />
        <div
            class="absolute inset-0 bg-gradient-to-r from-dark-900 via-dark-900/80 to-transparent"
        >
        </div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-3xl">
            <div
                class="inline-flex items-center bg-gold-500 text-dark-900 px-4 py-2 rounded-full mb-6 font-bold text-sm uppercase tracking-wide shadow-lg"
            >
                <svg
                    class="w-4 h-4 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    ></path>
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                Serving {city} & {county}
            </div>

            <h1
                class="text-4xl md:text-6xl font-bold mb-6 leading-tight text-cream-100"
            >
                Expert Garage Door Repair in <span class="text-gold-400"
                    >{city}, NJ</span
                >
            </h1>
            <p class="text-xl text-cream-200 mb-8 leading-relaxed max-w-2xl">
                Prompt, reliable garage door services for homeowners in {city}.
                We provide same-day repairs, new installations, and emergency
                service.
            </p>

            <div class="flex flex-col sm:flex-row gap-4">
                <a
                    href="/booking?utm_source=website&utm_medium=cta&utm_campaign=city-hero"
                    class="inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-dark-900 bg-gold-500 rounded-xl hover:bg-gold-600 hover:text-white transition-all hover:scale-105 shadow-lg hover:shadow-xl"
                >
                    Book Service in {city}
                </a>
                <div class="inline-flex flex-col sm:flex-row">
                    <a
                        href="tel:2015546769"
                        class="inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-white border-2 border-white rounded-xl hover:bg-white hover:text-dark-900 transition-all lg:hidden"
                    >
                        <svg
                            class="w-5 h-5 mr-2"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                            ></path>
                        </svg>
                        Call (201) 554-6769
                    </a>
                    <a
                        href="/services?utm_source=website&utm_medium=cta&utm_campaign=city-hero"
                        class="hidden lg:inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-white border-2 border-white rounded-xl hover:bg-white hover:text-dark-900 transition-all"
                    >
                        <svg
                            class="w-5 h-5 mr-2"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                            ></path>
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        View All Services
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
