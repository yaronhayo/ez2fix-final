---
import ResponsiveImage from "@components/ui/ResponsiveImage.astro";
import { Icon } from "@components/ui/Icon";
interface Props {
    city: string;
    county: string;
    image: string;
}

const { city, county, image } = Astro.props;
---

<section class="relative bg-dark-900 text-white py-20 lg:py-32 overflow-hidden">
    <div class="absolute inset-0 z-0 opacity-50">
        <ResponsiveImage
            src={image}
            alt={`Garage Door Repair in ${city}, NJ`}
            width={1920}
            height={1080}
            loading="eager"
            fetchpriority="high"
            class="w-full h-full object-cover"
        />
        <div
            class="absolute inset-0 bg-gradient-to-r from-dark-900 via-dark-900/80 to-transparent"
        >
        </div>
    </div>

    <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-3xl">
            <div
                class="inline-flex items-center bg-gold-500 text-dark-900 px-4 py-2 rounded-full mb-6 font-bold text-sm uppercase tracking-wide shadow-lg"
            >
                <Icon name="mapPin" className="w-4 h-4 mr-2" />
                Serving {city} & {county}
            </div>

            <h1
                class="text-4xl md:text-6xl font-bold mb-6 leading-tight text-cream-100"
            >
                Expert Garage Door Repair in <span class="text-gold-400"
                    >{city}, NJ</span
                >
            </h1>
            <p class="text-xl text-cream-200 mb-8 leading-relaxed max-w-2xl">
                Prompt, reliable garage door services for homeowners in {city}.
                We provide same-day repairs, new installations, and emergency
                service.
            </p>

            <div class="flex flex-col sm:flex-row gap-4">
                <a
                    href="/booking?utm_source=website&utm_medium=cta&utm_campaign=city-hero"
                    class="inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-dark-900 bg-gold-500 rounded-xl hover:bg-gold-600 hover:text-white transition-all hover:scale-105 shadow-lg hover:shadow-xl"
                >
                    Book Service in {city}
                </a>
                <div class="inline-flex flex-col sm:flex-row">
                    <a
                        href="tel:2015546769"
                        class="inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-white border-2 border-white rounded-xl hover:bg-white hover:text-dark-900 transition-all lg:hidden"
                    >
                        <Icon name="phone" className="w-5 h-5 mr-2" />
                        Call (201) 554-6769
                    </a>
                    <a
                        href="/services?utm_source=website&utm_medium=cta&utm_campaign=city-hero"
                        class="hidden lg:inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-white border-2 border-white rounded-xl hover:bg-white hover:text-dark-900 transition-all"
                    >
                        <Icon name="settings" className="w-5 h-5 mr-2" />
                        View All Services
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
