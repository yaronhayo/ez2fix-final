---
import { services } from "@data/services";
import { Icon } from "astro-icon/components";

// Aggregate all symptoms and map them back to services
const allSymptoms = services
    .flatMap((service) =>
        service.symptoms.map((symptom) => ({
            symptom,
            serviceSlug: service.slug,
            serviceTitle: service.title,
        })),
    )
    .slice(0, 8); // Limit to top 8 for the grid to avoid overwhelming
---

<section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center mb-16">
            <div
                class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gold-100 mb-6"
            >
                <Icon
                    name="heroicons:wrench-screwdriver"
                    class="w-8 h-8 text-gold-600"
                />
            </div>
            <h2 class="text-3xl md:text-4xl font-bold text-dark-900 mb-6">
                Diagnose Your Garage Door Issue
            </h2>
            <p class="text-lg text-dark-600 leading-relaxed">
                Not sure what's wrong? Select the symptom that best describes
                your problem to find the expert solution you need.
            </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
            {
                allSymptoms.map((item) => (
                    <a
                        href={`/services/${item.serviceSlug}`}
                        class="group bg-white p-8 rounded-2xl shadow-sm hover:shadow-xl border border-gray-100 hover:border-gold-500/30 transition-all duration-300 flex flex-col items-start text-left relative overflow-hidden"
                    >
                        <div class="absolute top-0 right-0 p-4 opacity-5 group-hover:opacity-10 transition-opacity">
                            <Icon
                                name="heroicons:exclamation-triangle"
                                class="w-24 h-24 text-gold-500 transform rotate-12"
                            />
                        </div>

                        <div class="w-12 h-12 bg-dark-50 rounded-xl flex items-center justify-center mb-6 group-hover:bg-gold-500 group-hover:text-white transition-all duration-300">
                            <Icon
                                name="heroicons:exclamation-triangle"
                                class="w-6 h-6 text-gold-600 group-hover:text-white transition-colors"
                            />
                        </div>

                        <h3 class="text-lg font-bold text-dark-900 mb-3 group-hover:text-gold-600 transition-colors pr-4 relative z-10">
                            "{item.symptom}"
                        </h3>

                        <div class="mt-auto pt-6 flex items-center text-sm font-semibold text-gray-400 group-hover:text-gold-600 transition-colors">
                            View Solution
                            <Icon
                                name="heroicons:arrow-right"
                                class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform"
                            />
                        </div>
                    </a>
                ))
            }
        </div>

        <div class="mt-16 text-center">
            <div
                class="inline-flex flex-col md:flex-row items-center gap-4 bg-white p-2 pr-6 rounded-full shadow-md border border-gray-100"
            >
                <span
                    class="bg-dark-900 text-white px-4 py-2 rounded-full text-sm font-bold"
                >
                    Still unsure?
                </span>
                <span class="text-dark-600 font-medium">
                    Our experts can diagnose it over the phone.
                </span>
                <a
                    href="tel:2015546769"
                    class="text-gold-600 font-bold hover:text-gold-700 flex items-center"
                >
                    <Icon name="heroicons:phone" class="w-4 h-4 mr-2" />
                    (201) 554-6769
                </a>
            </div>
        </div>
    </div>
</section>
