---
interface Props {
    city: string;
    neighborhoods: string[];
    zipCodes: string[];
}

const { city, neighborhoods, zipCodes } = Astro.props;
import { Icon } from "@components/ui/Icon";
---

<section class="py-16 bg-cream-100">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
            <h2 class="text-3xl font-bold text-dark-700 mb-8 text-center">
                Areas We Serve in {city}
            </h2>

            <div class="grid md:grid-cols-2 gap-8">
                {/* Neighborhoods */}
                <div
                    class="bg-white p-8 rounded-xl shadow-md border border-gold-200/20 h-full"
                >
                    <h3
                        class="text-xl font-bold text-dark-800 mb-4 flex items-center"
                    >
                        <Icon
                            name="map"
                            className="w-6 h-6 text-gold-500 mr-2"
                        />
                        Neighborhoods
                    </h3>
                    <ul class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                        {
                            neighborhoods.map((hood) => (
                                <li class="flex items-center text-dark-600">
                                    <span class="w-1.5 h-1.5 bg-gold-400 rounded-full mr-2" />
                                    {hood}
                                </li>
                            ))
                        }
                    </ul>
                </div>

                {/* ZIP Codes */}
                <div
                    class="bg-white p-8 rounded-xl shadow-md border border-gold-200/20 h-full"
                >
                    <h3
                        class="text-xl font-bold text-dark-800 mb-4 flex items-center"
                    >
                        <Icon
                            name="mapPin"
                            className="w-6 h-6 text-gold-500 mr-2"
                        />
                        ZIP Codes
                    </h3>
                    <div class="flex flex-wrap gap-2">
                        {
                            zipCodes.map((zip) => (
                                <span class="inline-block bg-cream-100 text-dark-700 px-3 py-1 rounded-lg font-medium border border-gold-200/30">
                                    {zip}
                                </span>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
