---
interface Props {
    city: string;
    neighborhoods: string[];
    zipCodes: string[];
}

const { city, neighborhoods, zipCodes } = Astro.props;
---

<section class="py-16 bg-cream-100">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
            <h2 class="text-3xl font-bold text-dark-700 mb-8 text-center">
                Areas We Serve in {city}
            </h2>

            <div class="grid md:grid-cols-2 gap-8">
                {/* Neighborhoods */}
                <div
                    class="bg-white p-8 rounded-xl shadow-md border border-gold-200/20 h-full"
                >
                    <h3
                        class="text-xl font-bold text-dark-800 mb-4 flex items-center"
                    >
                        <svg
                            class="w-6 h-6 text-gold-500 mr-2"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                            ></path>
                        </svg>
                        Neighborhoods
                    </h3>
                    <ul class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                        {
                            neighborhoods.map((hood) => (
                                <li class="flex items-center text-dark-600">
                                    <span class="w-1.5 h-1.5 bg-gold-400 rounded-full mr-2" />
                                    {hood}
                                </li>
                            ))
                        }
                    </ul>
                </div>

                {/* ZIP Codes */}
                <div
                    class="bg-white p-8 rounded-xl shadow-md border border-gold-200/20 h-full"
                >
                    <h3
                        class="text-xl font-bold text-dark-800 mb-4 flex items-center"
                    >
                        <svg
                            class="w-6 h-6 text-gold-500 mr-2"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                            ></path>
                        </svg>
                        ZIP Codes
                    </h3>
                    <div class="flex flex-wrap gap-2">
                        {
                            zipCodes.map((zip) => (
                                <span class="inline-block bg-cream-100 text-dark-700 px-3 py-1 rounded-lg font-medium border border-gold-200/30">
                                    {zip}
                                </span>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
