---
interface Step {
    number: number;
    title: string;
    description: string;
}

interface Props {
    title?: string;
    subtitle?: string;
    steps: Step[];
    className?: string;
}

const {
    title = "Our Process",
    subtitle = "How we get the job done right",
    steps,
    className,
} = Astro.props;
---

<section class={`py-16 bg-cream-100 ${className || ""}`}>
    <div class="container mx-auto px-4">
        <div class="text-center max-w-3xl mx-auto mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-dark-700 mb-4">
                {title}
            </h2>
            <p class="text-lg text-dark-600">
                {subtitle}
            </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
            {
                steps.map((step) => (
                    <div class="relative p-6 bg-white rounded-xl border border-gold-200/20 shadow-md hover:shadow-lg transition-all duration-300 h-full flex flex-col">
                        <div class="absolute -top-4 -left-4 w-12 h-12 bg-gold-500 text-cream-100 rounded-full flex items-center justify-center text-xl font-bold shadow-md border-2 border-white">
                            {step.number}
                        </div>
                        <h3 class="text-xl font-bold text-dark-700 mt-4 mb-2">
                            {step.title}
                        </h3>
                        <p class="text-dark-600 flex-grow">
                            {step.description}
                        </p>
                    </div>
                ))
            }
        </div>
    </div>
</section>
