---
import type { Location } from "@data/locations";

interface Props {
    currentCity: string;
    nearbyCities: Location[];
}

const { currentCity, nearbyCities } = Astro.props;
---

<section class="py-12 bg-white border-t border-gray-100">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
            <h3 class="text-xl font-bold text-dark-700 mb-6">
                Also Serving Areas Near {currentCity}
            </h3>
            <div class="flex flex-wrap justify-center gap-4">
                {
                    nearbyCities.map((city) => (
                        <a
                            href={`/service-areas/${city.slug}`}
                            class="bg-cream-100 hover:bg-gold-100 px-4 py-2 rounded-lg text-dark-700 hover:text-gold-700 font-semibold transition-colors border border-cream-300 hover:border-gold-400 text-sm"
                        >
                            {city.city}, {city.stateAbbr}
                        </a>
                    ))
                }
            </div>
        </div>
    </div>
</section>
