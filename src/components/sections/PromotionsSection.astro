---
import Button from "@components/ui/Button.astro";
import PromoBadge from "@components/ui/PromoBadge.astro";
import { Icon } from "@components/ui/Icon";
import { getPromotionsForLocation } from "@data/promotions";

interface Props {
    className?: string;
}

const { className = "" } = Astro.props;

const promotions = getPromotionsForLocation("hero"); // Using 'hero' location as it contains general high-priority promos
---

<section class={`py-16 bg-dark-900 relative overflow-hidden ${className}`}>
    <!-- Background Pattern -->
    <div
        class="absolute inset-0 opacity-10 bg-[radial-gradient(#fbbf24_1px,transparent_1px)] [background-size:16px_16px]"
    >
    </div>

    <div class="container mx-auto px-4 relative z-10">
        <div class="text-center mb-12">
            <div
                class="inline-flex items-center bg-gold-500/20 border border-gold-500/30 rounded-full px-4 py-1 mb-6 backdrop-blur-sm"
            >
                <span
                    class="w-2 h-2 bg-gold-500 rounded-full mr-2 animate-pulse"
                    aria-hidden="true"></span>
                <span
                    class="text-gold-400 font-medium text-sm tracking-wide uppercase"
                    >Current Specials</span
                >
            </div>
        </div>
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
            Save on Expert Garage Door Service
        </h2>
        <p class="text-lg text-gray-400 max-w-2xl mx-auto">
            Take advantage of our current specials. Quality service doesn't have
            to break the bank.
        </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-7xl mx-auto">
        {
            promotions.map((promo) => (
                <div class="group relative bg-dark-800 border border-dark-700 rounded-2xl p-6 hover:border-gold-500/50 transition-all duration-300 hover:-translate-y-1 hover:shadow-xl hover:shadow-gold-500/10 flex flex-col h-full">
                    <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                        <Icon
                            name="wrench"
                            className="w-24 h-24 text-gold-500 transform rotate-12"
                        />
                    </div>

                    <div class="relative z-10 flex flex-col h-full">
                        <PromoBadge
                            variant={promo.variant}
                            text={promo.badgeText}
                            class="mb-6"
                        />

                        <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-gold-400 transition-colors">
                            {promo.title}
                        </h3>

                        <p class="text-gray-400 mb-6 flex-grow text-sm">
                            {promo.description}
                        </p>

                        <div class="flex items-center justify-between mt-auto">
                            <Button
                                variant="outline"
                                size="sm"
                                href="/booking?utm_source=website&utm_medium=promo-section"
                            >
                                Claim Offer
                            </Button>
                            <div class="text-xs text-gray-500 font-medium">
                                *Terms apply
                            </div>
                        </div>
                    </div>
                </div>
            ))
        }
    </div>

    <div class="mt-12 text-center">
        <p class="text-gray-500 text-sm">
            Offers cannot be combined. Please mention coupon when booking.
        </p>
    </div>
</section>
