---
import { siteConfig } from "@config/site.config";
import { Icon } from "@components/ui/Icon";
---

<section class="py-16 bg-white border-t border-gray-100">
    <div class="container mx-auto px-4">
        <div class="max-w-5xl mx-auto">
            <!-- Kicker -->
            <div class="text-center mb-4">
                <span
                    class="text-gold-600 font-bold uppercase tracking-wider text-sm"
                >
                    Welcome to Ez2Fix
                </span>
            </div>

            <!-- Headline -->
            <h2
                class="text-3xl md:text-4xl font-bold text-dark-900 text-center mb-6"
            >
                Northern NJ's Trusted Garage Door Experts
            </h2>

            <!-- Body Text -->
            <p class="text-lg text-dark-600 leading-relaxed text-center mb-12">
                Ez2Fix is your trusted local partner for all garage door needs
                in Northern New Jersey. From urgent repairs to new
                installations, our licensed team serves homeowners across
                Bergen, Essex, Morris, Hudson, and Passaic counties with prompt,
                professional care you can rely on.
            </p>

            <!-- Key Highlights Grid -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div
                    class="flex items-start p-6 bg-cream-50 rounded-lg border border-gold-200/30"
                >
                    <div
                        class="w-12 h-12 bg-gold-100 rounded-full flex items-center justify-center flex-shrink-0 mr-4"
                    >
                        <Icon
                            name="shieldCheck"
                            className="w-6 h-6 text-gold-600"
                        />
                    </div>
                    <div>
                        <h3 class="font-bold text-dark-900 mb-1">
                            Licensed & Insured
                        </h3>
                        <p class="text-sm text-dark-600">
                            NJ License #{siteConfig.contact.license}
                        </p>
                    </div>
                </div>

                <div
                    class="flex items-start p-6 bg-cream-50 rounded-lg border border-gold-200/30"
                >
                    <div
                        class="w-12 h-12 bg-gold-100 rounded-full flex items-center justify-center flex-shrink-0 mr-4"
                    >
                        <Icon name="wrench" className="w-6 h-6 text-gold-600" />
                    </div>
                    <div>
                        <h3 class="font-bold text-dark-900 mb-1">
                            24/7 Emergency
                        </h3>
                        <p class="text-sm text-dark-600">
                            Available for urgent repairs
                        </p>
                    </div>
                </div>

                <div
                    class="flex items-start p-6 bg-cream-50 rounded-lg border border-gold-200/30"
                >
                    <div
                        class="w-12 h-12 bg-gold-100 rounded-full flex items-center justify-center flex-shrink-0 mr-4"
                    >
                        <Icon name="clock" className="w-6 h-6 text-gold-600" />
                    </div>
                    <div>
                        <h3 class="font-bold text-dark-900 mb-1">
                            Same-Day Service
                        </h3>
                        <p class="text-sm text-dark-600">
                            Available in most areas
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
