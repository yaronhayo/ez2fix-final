---
interface Props {
    variant?: "gold" | "white" | "green";
    size?: "sm" | "md" | "lg";
    text?: string;
    class?: string;
}

const {
    variant = "gold",
    size = "md",
    text,
    class: className = "",
} = Astro.props;

const variants = {
    gold: "bg-gold-500 text-dark-900 border-gold-600",
    white: "bg-white/90 text-dark-800 border-white/50 backdrop-blur-sm",
    green: "bg-green-600 text-white border-green-700",
};

const sizes = {
    sm: "text-xs px-2 py-0.5",
    md: "text-sm px-3 py-1",
    lg: "text-base px-4 py-1.5 font-bold",
};

const baseStyles =
    "inline-flex items-center justify-center rounded-full border shadow-sm uppercase tracking-wider font-semibold transition-transform hover:scale-105";
---

<span class:list={[baseStyles, variants[variant], sizes[size], className]}>
    <slot>{text}</slot>
</span>
