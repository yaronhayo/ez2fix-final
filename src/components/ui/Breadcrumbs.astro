---
import { Icon } from "@components/ui/Icon";
interface Props {
    items: {
        name: string;
        url?: string;
    }[];
    className?: string;
}

const { items, className = "" } = Astro.props;
---

<nav aria-label="Breadcrumb" class={`flex ${className}`}>
    <ol role="list" class="flex items-center space-x-2">
        <li>
            <a
                href="/"
                class="text-gray-400 hover:text-gold-600 transition-colors"
            >
                <Icon name="home" className="w-5 h-5" />
                <span class="sr-only">Home</span>
            </a>
        </li>
        {
            items.map((item) => (
                <li class="flex items-center">
                    <Icon
                        name="chevronRight"
                        className="w-4 h-4 text-gray-400 mx-1"
                    />
                    {item.url ? (
                        <a
                            href={item.url}
                            class="text-sm font-medium text-gray-500 hover:text-gold-600 transition-colors"
                        >
                            {item.name}
                        </a>
                    ) : (
                        <span
                            class="text-sm font-medium text-gold-600"
                            aria-current="page"
                        >
                            {item.name}
                        </span>
                    )}
                </li>
            ))
        }
    </ol>
</nav>
