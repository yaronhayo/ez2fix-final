---
import type { Location } from "@data/locations";
import { Image } from "astro:assets";
import { Icon } from "@components/ui/Icon";

interface Props {
    location: Location;
}

const { location } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
    "/src/assets/images/cities/*.{jpeg,jpg,png,tiff,webp,gif,avif,svg}",
);
const imagePath = `/src/assets/images/cities/${location.heroImage}`;
const heroImage = images[imagePath]
    ? (await images[imagePath]()).default
    : null;
---

<a
    href={`/service-areas/${location.slug}`}
    class="group relative overflow-hidden rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 h-80 flex flex-col justify-end"
>
    {/* Background Image with Overlay */}
    <div class="absolute inset-0 z-0">
        {
            heroImage ? (
                <Image
                    src={heroImage}
                    alt={`${location.city}, NJ Garage Door Repair`}
                    width={400}
                    height={300}
                    class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                />
            ) : (
                <div class="w-full h-full bg-dark-900" />
            )
        }
        <div
            class="absolute inset-0 bg-gradient-to-t from-dark-900 via-dark-900/60 to-transparent opacity-90 group-hover:opacity-80 transition-opacity"
        >
        </div>
    </div>

    {/* Content */}
    <div class="relative z-10 p-6">
        <div class="flex items-center justify-between mb-2">
            <h3
                class="text-2xl font-bold text-white group-hover:text-gold-300 transition-colors"
            >
                {location.city}
            </h3>
        </div>

        <p class="text-cream-200 text-sm mb-4 line-clamp-2">
            {
                location.heroSubtitle ||
                    `Expert garage door repair in ${location.city}.`
            }
        </p>

        <div
            class="flex items-center justify-between text-xs text-cream-300 border-t border-white/10 pt-3"
        >
            <div class="flex items-center">
                <Icon name="users" className="w-4 h-4 mr-1.5 text-gold-600" />
                <span>{location.customersServed}+ Customers</span>
            </div>
            <div
                class="flex items-center group-hover:translate-x-1 transition-transform"
            >
                <span class="font-semibold text-white mr-1">View Services</span>
                <Icon name="arrowRight" className="w-3 h-3" />
            </div>
        </div>
    </div>
</a>
