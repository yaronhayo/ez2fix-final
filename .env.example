# Development Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT COMMIT .env TO VERSION CONTROL

# Contentful CMS (Optional - will use fallback data if not configured)
CONTENTFUL_SPACE_ID=your_space_id_here
CONTENTFUL_ACCESS_TOKEN=your_access_token_here
CONTENTFUL_PREVIEW_TOKEN=your_preview_token_here
CONTENTFUL_MANAGEMENT_TOKEN=your_management_token_here
CONTENTFUL_ENVIRONMENT=master
CONTENTFUL_PREVIEW=false

# Nanobanana AI (Optional - for AI features)
NANOBANANA_API_KEY=your_api_key_here

# Google Services (Required for maps and forms)
PUBLIC_GOOGLE_MAPS_API_KEY=your_maps_api_key_here
PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# Email Service (Required for form submissions)
# Get your API key from https://resend.com
RESEND_API_KEY=your_resend_api_key_here

# Email notification recipients
# CRITICAL: Define this variable ONCE only! No duplicates!
# For MULTIPLE recipients, use comma-separated emails (no spaces):
# Example: RESEND_OWNER_EMAIL=owner1@example.com,owner2@example.com,owner3@example.com
RESEND_OWNER_EMAIL=yaron@gettmarketing.com,sandrahmarketing@gmail.com,ez2fixllc@gmail.com

# Email sender address (must be verified domain in Resend)
# Use onboarding@resend.dev for testing, or your verified domain
RESEND_FROM_EMAIL=noreply@ez2fixllc.com

# Legacy/unused variable (kept for compatibility)
PUBLIC_NOTIFICATION_EMAIL=notifications@ez2fixllc.com

# Conversion Tracking (Optional - for paid advertising)
PUBLIC_GOOGLE_ADS_CONVERSION_ID=
PUBLIC_GOOGLE_ADS_CONVERSION_LABEL=
PUBLIC_MICROSOFT_UET_TAG_ID=

# Site Configuration
PUBLIC_SITE_URL=https://ez2fixllc.com
NODE_ENV=development
